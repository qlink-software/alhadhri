<odoo>
    <record id="view_hide_main_navbar" model="ir.ui.view">
        <field name="name">Hide Main Navbar</field>
        <field name="inherit_id" ref="web.webclient_bootstrap"/>
        <field name="arch" type="xml">
            <xpath expr="//nav[hasclass('o_main_navbar')]" position="attributes">
                <attribute name="style">display: none !important;</attribute>
            </xpath>
            
            <xpath expr="//button[@data-menu-xmlid='web.menu_home']" position="attributes">
                <attribute name="style">display: none !important;</attribute>
            </xpath>
        </field>
    </record>
</odoo>