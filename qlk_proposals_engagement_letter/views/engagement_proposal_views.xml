<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_engagement_proposal_list" model="ir.ui.view">
            <field name="name">qlk.engagement.proposal.list</field>
            <field name="model">qlk.engagement.proposal</field>
            <field name="arch" type="xml">
                <list string="Engagement Proposals" create="true">
                    <field name="reference"/>
                    <field name="partner_id"/>
                    <field name="department_type"/>
                    <field name="payment_type"/>
                    <field name="estimated_hours"/>
                    <field name="total_amount"/>
                    <field name="state"/>
                    <field name="engagement_letter_id"/>
                </list>
            </field>
        </record>

        <record id="view_engagement_proposal_search" model="ir.ui.view">
            <field name="name">qlk.engagement.proposal.search</field>
            <field name="model">qlk.engagement.proposal</field>
            <field name="arch" type="xml">
                <search string="Proposals">
                    <field name="reference"/>
                    <field name="partner_id"/>
                    <field name="department_type"/>
                    <field name="payment_type"/>
                    <filter name="filter_draft" string="Draft" domain="[('state', '=', 'draft')]"/>
                    <filter name="filter_approved" string="Approved" domain="[('state', '=', 'approved')]"/>
                    <filter name="filter_converted" string="Converted" domain="[('state', '=', 'converted')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_partner" string="Client" context="{'group_by': 'partner_id'}"/>
                        <filter name="group_state" string="Status" context="{'group_by': 'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_engagement_proposal_form" model="ir.ui.view">
            <field name="name">qlk.engagement.proposal.form</field>
            <field name="model">qlk.engagement.proposal</field>
            <field name="arch" type="xml">
                <form string="Engagement Proposal">
                    <header>
                        <button name="action_approve_proposal" type="object" string="Approve" class="btn-primary"
                                invisible="state in ('approved', 'converted')"/>
                        <button name="action_convert_to_engagement" type="object" string="Convert to Engagement Letter" class="btn-primary"
                                invisible="state != 'approved'"/>
                        <button name="action_cancel_proposal" type="object" string="Cancel" class="btn-secondary"
                                invisible="state in ('cancelled', 'converted')"/>
                        <button name="action_set_draft" type="object" string="Reset to Draft" class="btn-secondary"
                                invisible="state != 'cancelled'"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,converted,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_convert_to_engagement" type="object" class="oe_stat_button" icon="fa-file-text"
                                    invisible="state != 'approved'">
                                <span>Convert</span>
                            </button>
                            <button name="action_open_engagement_letter" type="object" class="oe_stat_button" icon="fa-link"
                                    invisible="not engagement_letter_id">
                                <field name="engagement_letter_id" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="reference" readonly="1"/>
                                <field name="partner_id" options="{'no_create_edit': True}"/>
                                <field name="department_type"/>
                                <field name="payment_type"/>
                            </group>
                            <group>
                                <field name="estimated_hours"/>
                                <field name="hourly_rate"/>
                                <field name="additional_cost"/>
                                <field name="total_amount" readonly="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Services">
                                <field name="service_description" widget="html" class="oe_inline"/>
                            </page>
                            <page string="Notes">
                                <field name="notes" widget="text"/>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

    </data>
</odoo>
