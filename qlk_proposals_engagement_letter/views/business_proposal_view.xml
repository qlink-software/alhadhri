<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_business_proposal_list" model="ir.ui.view">
            <field name="name">qlk.business.proposal.list</field>
            <field name="model">qlk.business.proposal</field>
            <field name="arch" type="xml">
                <list string="Business Proposals">
                    <field name="name"/>
                    <field name="client_name"/>
                    <field name="employee_id"/>
                    <field name="date"/>
                    <field name="status"/>
                    <field name="report_status"/>
                    <field name="legal_fees"/>
                    <field name="cost_total_amount"/>
                    <field name="amount_collected"/>
                    <field name="remaining_amount"/>
                    <field name="approved_by"/>
                    <field name="engagement_id"/>
                </list>
            </field>
        </record>

        <record id="view_business_proposal_search" model="ir.ui.view">
            <field name="name">qlk.business.proposal.search</field>
            <field name="model">qlk.business.proposal</field>
            <field name="arch" type="xml">
                <search string="Business Proposals">
                    <field name="name"/>
                    <field name="client_name"/>
                    <field name="employee_id"/>
                    <filter name="filter_draft" string="Draft" domain="[('status', '=', 'draft')]"/>
                    <filter name="filter_waiting" string="Waiting Approval" domain="[('status', '=', 'waiting')]"/>
                    <filter name="filter_approved" string="Approved" domain="[('status', '=', 'approved')]"/>
                    <filter name="filter_rejected" string="Rejected" domain="[('status', '=', 'rejected')]"/>
                    <filter name="filter_converted" string="Converted" domain="[('status', '=', 'converted')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                        <filter name="group_client" string="Client" context="{'group_by': 'client_name'}"/>
                        <filter name="group_month" string="Month" context="{'group_by': 'date:month'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_business_proposal_kanban" model="ir.ui.view">
            <field name="name">qlk.business.proposal.kanban</field>
            <field name="model">qlk.business.proposal</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey"
                        default_group_by="status"
                        create="1">
                    <field name="name"/>
                    <field name="client_name"/>
                    <field name="status"/>
                    <field name="date"/>
                    <field name="legal_fees"/>
                    <field name="employee_id"/>
                    <field name="cost_total_amount"/>
                    <field name="amount_collected"/>
                    <field name="remaining_amount"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <div class="o_kanban_record_top">
                                    <strong><field name="name"/></strong>
                                    <span class="oe_badge">
                                        <field name="status"/>
                                    </span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div class="o_kanban_primary_center">
                                        <div><strong>Client:</strong> <span><t t-esc="record.client_name.value or ''"/></span></div>
                                        <div><strong>Date:</strong> <span><field name="date"/></span></div>
                                        <div><strong>Lawyer:</strong> <span><field name="employee_id"/></span></div>
                                    </div>
                                    <div class="o_kanban_primary_bottom">
                                        <div><strong>Fees:</strong> <span><field name="legal_fees"/></span></div>
                                        <div><strong>Total Cost:</strong> <span><field name="cost_total_amount"/></span></div>
                                        <div><strong>Collected:</strong> <span><field name="amount_collected"/></span></div>
                                        <div><strong>Remaining:</strong> <span><field name="remaining_amount"/></span></div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_business_proposal_calendar" model="ir.ui.view">
            <field name="name">qlk.business.proposal.calendar</field>
            <field name="model">qlk.business.proposal</field>
            <field name="arch" type="xml">
                <calendar string="Business Proposals Calendar"
                          date_start="date"
                          color="status">
                    <field name="name"/>
                    <field name="client_name"/>
                    <field name="status"/>
                </calendar>
            </field>
        </record>

        <record id="view_business_proposal_graph" model="ir.ui.view">
            <field name="name">qlk.business.proposal.graph</field>
            <field name="model">qlk.business.proposal</field>
            <field name="arch" type="xml">
                <graph string="Business Proposal Analysis" type="bar">
                    <field name="date" interval="month"/>
                    <field name="status"/>
                </graph>
            </field>
        </record>

        <record id="view_business_proposal_form" model="ir.ui.view">
            <field name="name">qlk.business.proposal.form</field>
            <field name="model">qlk.business.proposal</field>
            <field name="arch" type="xml">
                <form string="Business Proposal">
                    <header>
                        <button name="action_send_for_approval"
                                string="Send for Approval"
                                type="object"
                                class="btn-primary"
                                invisible="status not in ('draft', 'rejected') or not active"/>
                        <button name="action_approve"
                                string="Approve"
                                type="object"
                                class="btn-primary"
                                invisible="status != 'waiting'"/>
                        <button name="action_reject"
                                string="Reject"
                                type="object"
                                class="btn-secondary"
                                invisible="status != 'waiting'"/>
                        <button name="action_resubmit"
                                string="Resubmit"
                                type="object"
                                class="btn-secondary"
                                invisible="status != 'rejected'"/>
                        <button name="action_print_pdf"
                                string="Print PDF"
                                type="object"
                                class="btn-secondary"
                                invisible="status != 'approved'"/>
                        <button name="action_convert_to_engagement"
                                string="Convert to Engagement Letter"
                                type="object"
                                class="btn-primary"
                                invisible="status != 'approved' or report_status != 'approved_client'"/>
                        <button name="action_close_proposal"
                                string="Close"
                                type="object"
                                class="btn-danger"
                                invisible="status not in ('approved', 'converted', 'rejected')"/>
                        <button name="action_reject_and_close"
                                string="Reject and Close"
                                type="object"
                                class="btn-danger"
                                invisible="status != 'rejected'"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,waiting,approved,rejected,converted,closed"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_convert_to_engagement"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-external-link"
                                    invisible="not engagement_id">
                                <field name="engagement_id" widget="statinfo"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="initiation_id" options="{'no_create_edit': True}"/>
                                <field name="date"/>
                                <field name="client_name"/>
                                <field name="reference_no"/>
                                <field name="activity_user_id"/>
                                <field name="employee_id"/>
                                <field name="cost_calculation_id" readonly="1" domain="[('employee_id', '=', employee_id)]"/>
                            </group>
                            <group>
                                <field name="legal_fees"/>
                                <field name="amount_collected"/>
                                <field name="remaining_amount" readonly="1"/>
                                <field name="report_status"/>
                                <field name="approved_by" readonly="1"/>
                                <field name="approved_on" readonly="1"/>
                            </group>
                        </group>
                        <group string="Cost Calculation Overview">
                            <group>
                                <field name="cost_base_amount" readonly="1"/>
                                <field name="cost_additional_amount"/>
                            </group>
                            <group>
                                <field name="cost_total_amount" readonly="1"/>
                            </group>
                        </group>
                        <group string="Scope of Work and Terms">
                            <field name="scope_of_work" widget="text"/>
                            <field name="terms_conditions" widget="text"/>
                        </group>
                        <group string="Reviewer Comment" invisible="status not in ('waiting', 'rejected')">
                            <field name="reviewer_comment"/>
                        </group>
                        <notebook>
                            <page string="Financial Overview">
                                <group>
                                    <group>
                                        <field name="estimated_cost" readonly="1"/>
                                        <field name="number_of_cases" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="proposal_pdf_printed" readonly="1"/>
                                        <field name="engagement_id" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="action_business_proposal" model="ir.actions.act_window">
            <field name="name">Business Proposals</field>
            <field name="res_model">qlk.business.proposal</field>
            <field name="view_mode">kanban,list,calendar,graph,form</field>
            <field name="view_id" ref="qlk_proposals_engagement_letter.view_business_proposal_kanban"/>
            <field name="search_view_id" ref="qlk_proposals_engagement_letter.view_business_proposal_search"/>
        </record>

        <record id="action_business_proposal_waiting" model="ir.actions.act_window">
            <field name="name">Proposal Approvals</field>
            <field name="res_model">qlk.business.proposal</field>
            <field name="view_mode">kanban,list,calendar,graph,form</field>
            <field name="domain">[('status', '=', 'waiting')]</field>
            <field name="search_view_id" ref="qlk_proposals_engagement_letter.view_business_proposal_search"/>
            <field name="context">{'search_default_filter_waiting': 1}</field>
        </record>

        <record id="action_business_proposal_rejected" model="ir.actions.act_window">
            <field name="name">Rejected Proposals</field>
            <field name="res_model">qlk.business.proposal</field>
            <field name="view_mode">kanban,list,calendar,graph,form</field>
            <field name="domain">[('status', '=', 'rejected')]</field>
            <field name="search_view_id" ref="qlk_proposals_engagement_letter.view_business_proposal_search"/>
        </record>
    </data>
</odoo>
