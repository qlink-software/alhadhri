<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_proposal_report_pivot" model="ir.ui.view">
            <field name="name">qlk.proposal.report.pivot</field>
            <field name="model">qlk.proposal.report</field>
            <field name="arch" type="xml">
                <pivot string="Proposal Analysis" disable_linking="true">
                    <field name="legal_fees" type="measure"/>
                    <field name="amount_collected" type="measure"/>
                    <field name="remaining_amount" type="measure"/>
                    <field name="status" type="row"/>
                    <field name="report_status" type="row"/>
                    <field name="year" type="col"/>
                    <field name="month" type="col"/>
                </pivot>
            </field>
        </record>

        <record id="view_proposal_report_graph" model="ir.ui.view">
            <field name="name">qlk.proposal.report.graph</field>
            <field name="model">qlk.proposal.report</field>
            <field name="arch" type="xml">
                <graph string="Proposal Trend" type="bar">
                    <field name="year" type="row"/>
                    <field name="month" type="row"/>
                    <field name="legal_fees" type="measure"/>
                </graph>
            </field>
        </record>

        <record id="view_proposal_report_search" model="ir.ui.view">
            <field name="name">qlk.proposal.report.search</field>
            <field name="model">qlk.proposal.report</field>
            <field name="arch" type="xml">
                <search string="Proposal Reports">
                    <group expand="0" string="Group By">
                        <filter name="group_status" string="Status" context="{'group_by': 'status'}"/>
                        <filter name="group_report_status" string="Client Decision" context="{'group_by': 'report_status'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_proposal_report" model="ir.actions.act_window">
            <field name="name">Proposal Reports</field>
            <field name="res_model">qlk.proposal.report</field>
            <field name="view_mode">pivot,graph</field>
            <field name="search_view_id" ref="qlk_proposals_engagement_letter.view_proposal_report_search"/>
        </record>
    </data>
</odoo>
