<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_proposal_initiation_list" model="ir.ui.view">
            <field name="name">qlk.proposal.initiation.list</field>
            <field name="model">qlk.proposal.initiation</field>
            <field name="arch" type="xml">
                <list string="Proposal Initiations" create="true">
                    <field name="name"/>
                    <field name="number_of_cases"/>
                    <field name="pricing_table_id"/>
                    <field name="estimated_cost"/>
                    <field name="proposal_count" widget="integer"/>
                    <field name="create_date"/>
                </list>
            </field>
        </record>

        <record id="view_proposal_initiation_search" model="ir.ui.view">
            <field name="name">qlk.proposal.initiation.search</field>
            <field name="model">qlk.proposal.initiation</field>
            <field name="arch" type="xml">
                <search string="Proposal Initiations">
                    <field name="name"/>
                    <field name="pricing_table_id"/>
                    <group expand="0" string="Group By">
                        <filter name="group_pricing" string="Pricing Table" context="{'group_by': 'pricing_table_id'}"/>
                        <filter name="group_company" string="Company" context="{'group_by': 'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_proposal_initiation_form" model="ir.ui.view">
            <field name="name">qlk.proposal.initiation.form</field>
            <field name="model">qlk.proposal.initiation</field>
            <field name="arch" type="xml">
                <form string="Proposal Initiation">
                    <header>
                        <button name="action_create_proposal"
                                string="Create Proposal"
                                type="object"
                                class="btn-primary"
                                groups="qlk_proposals_engagement_letter.group_legal_employee,qlk_proposals_engagement_letter.group_legal_manager"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_proposals"
                                    type="object"
                                    class="oe_stat_button"
                                    icon="fa-file-text-o"
                                    invisible="proposal_count == 0">
                                <field name="proposal_count" widget="statinfo" string="Proposals"/>
                            </button>
                        </div>
                        <group>
                            <group>
                                <field name="name" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                                <field name="pricing_table_id" options="{'no_create_edit': False}"/>
                            </group>
                            <group>
                                <field name="number_of_cases"/>
                                <field name="currency_id" readonly="1"/>
                                <field name="estimated_cost" readonly="1"/>
                            </group>
                        </group>
                        <group string="Scope of Work">
                            <field name="scope_of_work"/>
                        </group>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="action_proposal_initiation" model="ir.actions.act_window">
            <field name="name">Proposal Initiations</field>
            <field name="res_model">qlk.proposal.initiation</field>
            <field name="view_mode">list,form</field>
            <field name="search_view_id" ref="qlk_proposals_engagement_letter.view_proposal_initiation_search"/>
        </record>
    </data>
</odoo>
