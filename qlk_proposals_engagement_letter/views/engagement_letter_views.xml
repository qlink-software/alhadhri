<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_engagement_letter_list" model="ir.ui.view">
            <field name="name">qlk.engagement.letter.list</field>
            <field name="model">qlk.engagement.letter</field>
            <field name="arch" type="xml">
                <list string="Engagement Letters" class="qlk_engagement_list">
                    <field name="reference"/>
                    <field name="date"/>
                    <field name="partner_id"/>
                    <field name="employee_id"/>
                    <field name="client_type"/>
                    <field name="contract_type"/>
                    <field name="payment_type"/>
                    <field name="department_type"/>
                    <field name="retainer_scope"/>
                    <field name="is_approved"/>
                    <field name="total_fees"/>
                    <field name="cost_total_amount"/>
                    <field name="approval_state"/>
                    <field name="state"/>
                    <field name="project_id"/>
                </list>
            </field>
        </record>

        <record id="view_engagement_letter_search" model="ir.ui.view">
            <field name="name">qlk.engagement.letter.search</field>
            <field name="model">qlk.engagement.letter</field>
            <field name="arch" type="xml">
                <search string="Engagement Letters">
                    <field name="reference"/>
                    <field name="partner_id"/>
                    <field name="employee_id"/>
                    <field name="contract_type"/>
                    <field name="payment_type"/>
                    <field name="department_type"/>
                    <filter string="Retainers" name="retainers" domain="[('contract_type', '=', 'retainer')]"/>
                    <filter string="Lump Sum" name="lump_sum" domain="[('contract_type', '=', 'lump_sum')]"/>
                    <filter string="Paid" name="paid" domain="[('payment_type', '=', 'paid')]"/>
                    <filter string="Pro Bono" name="pro_bono" domain="[('payment_type', '=', 'pro_bono')]"/>
                    <filter string="Waiting Approval" name="waiting" domain="[('approval_state', '=', 'waiting')]"/>
                    <filter string="Approved" name="approved" domain="[('approval_state', '=', 'approved')]"/>
                    <filter string="Approved" name="approved_state" domain="[('state', '=', 'approved')]"/>
                    <filter string="Active" name="active" domain="[('state', '=', 'active')]"/>
                    <filter string="Closed" name="closed" domain="[('state', '=', 'closed')]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_partner" string="Client" context="{'group_by':'partner_id'}"/>
                        <filter name="group_by_department" string="Department" context="{'group_by':'department_type'}"/>
                        <filter name="group_by_state" string="State" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_engagement_letter_kanban" model="ir.ui.view">
            <field name="name">qlk.engagement.letter.kanban</field>
            <field name="model">qlk.engagement.letter</field>
            <field name="arch" type="xml">
                <kanban class="oe_background_grey"
                        default_group_by="state">
                    <field name="reference"/>
                    <field name="partner_id"/>
                    <field name="approval_state"/>
                    <field name="state"/>
                    <field name="date"/>
                    <field name="payment_type"/>
                    <field name="contract_type"/>
                    <field name="employee_id"/>
                    <field name="cost_total_amount"/>
                    <field name="total_fees"/>
                    <templates>
                        <t t-name="kanban-box">
                            <div class="oe_kanban_global_click o_kanban_card">
                                <div class="o_kanban_record_top">
                                    <strong><field name="reference"/></strong>
                                    <span class="oe_badge"><field name="state"/></span>
                                </div>
                                <div class="o_kanban_record_body">
                                    <div><strong>Client:</strong> <span><field name="partner_id"/></span></div>
                                    <div><strong>Date:</strong> <span><field name="date"/></span></div>
                                    <div><strong>Lawyer:</strong> <span><field name="employee_id"/></span></div>
                                    <div><strong>Approval:</strong> <span><field name="approval_state"/></span></div>
                                    <div><strong>Contract:</strong> <span><field name="contract_type"/></span></div>
                                    <div><strong>Payment:</strong> <span><field name="payment_type"/></span></div>
                                    <div><strong>Total Cost:</strong> <span><field name="cost_total_amount"/></span></div>
                                    <div><strong>Total Fees:</strong> <span><field name="total_fees"/></span></div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record id="view_engagement_letter_calendar" model="ir.ui.view">
            <field name="name">qlk.engagement.letter.calendar</field>
            <field name="model">qlk.engagement.letter</field>
            <field name="arch" type="xml">
                <calendar string="Engagement Letters Calendar"
                          date_start="date"
                          color="state">
                    <field name="reference"/>
                    <field name="partner_id"/>
                    <field name="state"/>
                </calendar>
            </field>
        </record>

        <record id="view_engagement_letter_graph" model="ir.ui.view">
            <field name="name">qlk.engagement.letter.graph</field>
            <field name="model">qlk.engagement.letter</field>
            <field name="arch" type="xml">
                <graph string="Engagement Letter Analysis" type="bar">
                    <field name="date" interval="month"/>
                    <field name="state"/>
                </graph>
            </field>
        </record>

        <record id="view_engagement_letter_form" model="ir.ui.view">
            <field name="name">qlk.engagement.letter.form</field>
            <field name="model">qlk.engagement.letter</field>
            <field name="arch" type="xml">
                <form string="Engagement Letter" class="qlk_engagement_form">
                    <header>
                        <button name="action_submit_for_approval" string="Send for Approval" type="object" class="btn-secondary" invisible="approval_state not in ('draft', 'rejected')"/>
                        <button name="action_approve" string="Approve" type="object" class="btn-primary" groups="qlk_proposals_engagement_letter.group_engagement_manager" invisible="approval_state != 'waiting'"/>
                        <button name="action_reject" string="Reject" type="object" class="btn-secondary" groups="qlk_proposals_engagement_letter.group_engagement_manager" invisible="approval_state != 'waiting'"/>
                        <button name="action_reset_to_draft" string="Reset to Draft" type="object" class="btn-secondary" invisible="approval_state != 'rejected'"/>
                        <button name="action_print_letter" string="Print" type="object" class="btn-secondary" invisible="not can_print"/>
                        <button name="action_mark_project_approved" string="Approve Project" type="object" class="btn-primary"
                                groups="qlk_proposals_engagement_letter.group_engagement_manager"
                                invisible="is_approved"/>
                        <button name="action_create_project" string="Create Project" type="object" class="btn-primary"
                                invisible="not is_approved or project_id"/>
                        <button name="action_open_project" string="Open Project" type="object" class="btn-secondary"
                                invisible="not project_id"/>
                        <button name="action_set_active" string="Activate" type="object" class="oe_highlight" invisible="state not in ('draft', 'approved')"/>
                        <button name="action_set_closed" string="Close" type="object" invisible="state != 'active'"/>
                        <button name="action_set_cancelled" string="Cancel" type="object" invisible="state not in ('draft', 'approved', 'active')"/>
                        <field name="approval_state" widget="statusbar" statusbar_visible="draft,waiting,approved,rejected"/>
                        <field name="state" widget="statusbar" statusbar_visible="draft,approved,active,closed,cancelled"/>
                    </header>
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_open_project" type="object" class="oe_stat_button" icon="fa-briefcase"
                                    invisible="not project_id">
                                <field name="project_id" string="Project" widget="statinfo"/>
                            </button>
                            <button name="action_open_corporate_usage" type="object" class="oe_stat_button" icon="fa-clock-o">
                                <field name="corporate_hours_month_to_date" string="This Month"/>
                            </button>
                            <button name="action_open_litigation_cases" type="object" class="oe_stat_button" icon="fa-balance-scale">
                                <field name="litigation_case_count" string="Litigation Cases"/>
                            </button>
                        </div>

                        <h1>
                            <field name="name" class="qlk_engagement_ref" readonly="1"/>
                        </h1>

                        <group class="qlk_engagement_overview">
                            <group>
                                <field name="reference" readonly="1"/>
                                <field name="serial_number" readonly="1"/>
                                <field name="year" readonly="1"/>
                                <field name="date"/>
                                <field name="contract_type"/>
                                <field name="retainer_scope" invisible="contract_type != 'retainer'"/>
                                <field name="department_type" readonly="contract_type == 'retainer'"/>
                                <field name="proposal_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="partner_id" options="{'no_create_edit': True}"/>
                                <field name="client_type" readonly="1"/>
                                <field name="company_id" readonly="1"/>
                                <field name="payment_reminder_days"/>
                            </group>
                        </group>
                        <group string="Assignment &amp; Cost">
                            <group>
                                <field name="employee_id"/>
                                <field name="cost_calculation_id" readonly="1" domain="[('employee_id', '=', employee_id)]"/>
                            </group>
                            <group>
                                <field name="cost_base_amount" readonly="1"/>
                                <field name="cost_additional_amount"/>
                                <field name="cost_total_amount" readonly="1"/>
                            </group>
                        </group>

                        <notebook class="qlk_engagement_notebook">
                            <page string="Overview">
                                <group>
                                    <group string="Office Details" class="qlk_maroon_outline">
                                        <field name="office_name" readonly="1"/>
                                        <field name="office_license_number" readonly="1"/>
                                        <field name="office_location" readonly="1"/>
                                        <field name="office_email" readonly="1"/>
                                        <field name="office_phone" readonly="1"/>
                                        <field name="office_authorized_signatory_name" readonly="1"/>
                                        <field name="office_authorized_signatory_title" readonly="1"/>
                                        <field name="office_authorized_signatory_details" readonly="1" widget="text"/>
                                    </group>
                                    <group string="Client Snapshot" class="qlk_maroon_outline">
                                        <field name="partner_id" readonly="1"/>
                                        <field name="client_type" readonly="1"/>
                                        <field name="total_fees" readonly="1"/>
                                        <field name="currency_id" readonly="1"/>
                                        <field name="state" readonly="1"/>
                                        <field name="client_unique_code" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Client Information">
                                <group string="Individual Client" invisible="client_type != 'individual'">
                                    <group>
                                        <field name="individual_full_name"/>
                                        <field name="individual_qid"/>
                                        <field name="individual_passport"/>
                                    </group>
                                    <group>
                                        <field name="individual_email"/>
                                        <field name="individual_phone"/>
                                        <field name="individual_authorized_signatory_name"/>
                                        <field name="individual_authorized_signatory_details"/>
                                    </group>
                                </group>
                                <group string="Company Client" invisible="client_type != 'company'">
                                    <group>
                                        <field name="company_name"/>
                                        <field name="company_cr_number"/>
                                        <field name="company_location"/>
                                        <field name="company_email"/>
                                        <field name="company_phone"/>
                                    </group>
                                    <group>
                                        <field name="company_authorized_signatory_name"/>
                                        <field name="company_authorized_signatory_id_number"/>
                                        <field name="company_authorized_signatory_nationality"/>
                                        <field name="company_authorized_signatory_title"/>
                                    </group>
                                </group>
                                <group string="Client Contacts">
                                    <field name="client_detail_ids" nolabel="1" context="{'default_engagement_id': id}">
                                        <list editable="bottom">
                                            <field name="sequence" widget="handle"/>
                                            <field name="name"/>
                                            <field name="role"/>
                                            <field name="email"/>
                                            <field name="phone"/>
                                            <field name="identification"/>
                                            <field name="active"/>
                                        </list>
                                    </field>
                                </group>
                            </page>
                            <page string="Scope &amp; Fees">
                                <group>
                                    <field name="scope_of_work" class="qlk_scope_area" widget="html"/>
                                </group>
                                <group>
                                    <group string="Financial Summary">
                                        <field name="payment_type"/>
                                        <field name="estimated_hours"/>
                                        <field name="hourly_rate"/>
                                        <field name="additional_cost"/>
                                        <field name="estimated_total" readonly="1"/>
                                        <field name="total_fees"/>
                                        <field name="currency_id"/>
                                    </group>
                                    <group string="Installment Plan">
                                        <field name="installment_ids" context="{'default_engagement_id': id}" nolabel="1">
                                            <list editable="bottom">
                                                <field name="sequence" widget="handle"/>
                                                <field name="description"/>
                                                <field name="amount"/>
                                                <field name="due_date"/>
                                                <field name="state"/>
                                                <field name="reminder_sent" readonly="1"/>
                                            </list>
                                        </field>
                                    </group>
                                </group>
                            </page>
                            <page string="Retainer Tracking">
                                <group invisible="contract_type != 'retainer'">
                                    <group string="Corporate Services" invisible="retainer_scope not in ['corporate', 'both']">
                                        <field name="monthly_hours"/>
                                        <field name="yearly_hours" readonly="1"/>
                                        <field name="corporate_hours_month_to_date" readonly="1"/>
                                        <field name="corporate_hours_remaining" readonly="1"/>
                                        <field name="corporate_usage_ids" context="{'default_engagement_id': id}" nolabel="1">
                                            <list editable="bottom" create="1" delete="1">
                                                <field name="date"/>
                                                <field name="hours"/>
                                                <field name="description"/>
                                                <field name="work_id"/>
                                            </list>
                                        </field>
                                        <field name="corporate_alert_ids" readonly="1" nolabel="1">
                                            <list>
                                                <field name="year"/>
                                                <field name="month"/>
                                                <field name="hours"/>
                                                <field name="notified"/>
                                                <field name="notified_on"/>
                                            </list>
                                        </field>
                                    </group>
                                    <group string="Litigation Services" invisible="retainer_scope not in ['litigation', 'both']">
                                        <field name="max_cases"/>
                                        <field name="total_cases" readonly="1"/>
                                        <field name="litigation_limit_reached" readonly="1"/>
                                        <field name="litigation_case_ids" context="{'default_engagement_id': id}" nolabel="1">
                                            <list editable="bottom" delete="1">
                                                <field name="open_date"/>
                                                <field name="name"/>
                                                <field name="case_id"/>
                                                <field name="notes"/>
                                            </list>
                                        </field>
                                    </group>
                                </group>
                            </page>
                            <page string="Articles">
                                <field name="article_ids" nolabel="1" context="{'default_engagement_id': id}">
                                    <list editable="bottom" class="qlk_engagement_articles_list">
                                        <field name="sequence" widget="handle"/>
                                        <field name="name" readonly="1"/>
                                        <field name="template_id" readonly="1"/>
                                        <field name="is_editable" readonly="1"/>
                                    </list>
                                    <form string="Article">
                                        <group>
                                            <field name="name" readonly="1"/>
                                            <field name="is_editable" readonly="1"/>
                                            <field name="content" widget="html" readonly="not is_editable"/>
                                        </group>
                                    </form>
                                </field>
                            </page>
                            <page string="Approvals &amp; Documents">
                                <group>
                                    <group string="Approval" class="qlk_maroon_outline">
                                        <field name="approval_state" readonly="1"/>
                                        <field name="requester_id" readonly="1"/>
                                        <field name="approver_id" groups="qlk_proposals_engagement_letter.group_engagement_manager"/>
                                        <field name="approval_requested_on" readonly="1"/>
                                        <field name="approval_decision_on" readonly="1"/>
                                        <field name="approval_comment" placeholder="Add approval notes" readonly="approval_state not in ('waiting', 'approved')" groups="qlk_proposals_engagement_letter.group_engagement_manager"/>
                                        <field name="approval_comment" readonly="1" groups="qlk_proposals_engagement_letter.group_engagement_user,qlk_proposals_engagement_letter.group_engagement_viewer"/>
                                        <field name="rejection_reason" placeholder="Provide rejection reason" readonly="approval_state != 'waiting'" groups="qlk_proposals_engagement_letter.group_engagement_manager"/>
                                        <field name="rejection_reason" readonly="1" groups="qlk_proposals_engagement_letter.group_engagement_user,qlk_proposals_engagement_letter.group_engagement_viewer"/>
                                    </group>
                                    <group string="Signed Document" class="qlk_maroon_outline">
                                        <field name="signed_document" filename="signed_document_filename" readonly="approval_state != 'approved'"/>
                                        <field name="signed_document_filename" readonly="approval_state != 'approved'"/>
                                        <field name="signed_document_uploaded_on" readonly="1"/>
                                        <field name="signed_document_uploaded_by" readonly="1"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Signatures">
                                <group>
                                    <group>
                                        <field name="signatory_page2_name"/>
                                        <field name="signatory_page2_title"/>
                                    </group>
                                    <group>
                                        <field name="signatory_final_name"/>
                                        <field name="signatory_final_title"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_engagement_installment_list" model="ir.ui.view">
            <field name="name">qlk.engagement.installment.list</field>
            <field name="model">qlk.engagement.installment</field>
            <field name="arch" type="xml">
                <list string="Installments">
                    <field name="engagement_id"/>
                    <field name="description"/>
                    <field name="amount"/>
                    <field name="due_date"/>
                    <field name="state"/>
                    <field name="reminder_sent"/>
                </list>
            </field>
        </record>

        <record id="view_engagement_installment_form" model="ir.ui.view">
            <field name="name">qlk.engagement.installment.form</field>
            <field name="model">qlk.engagement.installment</field>
            <field name="arch" type="xml">
                <form string="Installment">
                    <sheet>
                        <group>
                            <field name="engagement_id"/>
                            <field name="sequence"/>
                            <field name="description"/>
                            <field name="amount"/>
                            <field name="due_date"/>
                            <field name="state"/>
                            <field name="reminder_sent"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_engagement_corporate_log_list" model="ir.ui.view">
            <field name="name">qlk.engagement.corporate.log.list</field>
            <field name="model">qlk.engagement.corporate.log</field>
            <field name="arch" type="xml">
                <list string="Corporate Usage Logs">
                    <field name="engagement_id"/>
                    <field name="date"/>
                    <field name="hours"/>
                    <field name="description"/>
                    <field name="work_id"/>
                </list>
            </field>
        </record>

        <record id="view_engagement_corporate_log_form" model="ir.ui.view">
            <field name="name">qlk.engagement.corporate.log.form</field>
            <field name="model">qlk.engagement.corporate.log</field>
            <field name="arch" type="xml">
                <form string="Corporate Usage">
                    <sheet>
                        <group>
                            <field name="engagement_id"/>
                            <field name="date"/>
                            <field name="hours"/>
                            <field name="description"/>
                            <field name="work_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_engagement_litigation_case_list" model="ir.ui.view">
            <field name="name">qlk.engagement.litigation.case.list</field>
            <field name="model">qlk.engagement.litigation.case</field>
            <field name="arch" type="xml">
                <list string="Litigation Cases">
                    <field name="engagement_id"/>
                    <field name="name"/>
                    <field name="case_id"/>
                    <field name="open_date"/>
                    <field name="notes"/>
                </list>
            </field>
        </record>

        <record id="view_engagement_litigation_case_form" model="ir.ui.view">
            <field name="name">qlk.engagement.litigation.case.form</field>
            <field name="model">qlk.engagement.litigation.case</field>
            <field name="arch" type="xml">
                <form string="Litigation Case">
                    <sheet>
                        <group>
                            <field name="engagement_id"/>
                            <field name="case_id"/>
                            <field name="name"/>
                            <field name="open_date"/>
                            <field name="notes"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_engagement_article_template_list" model="ir.ui.view">
            <field name="name">qlk.engagement.article.template.list</field>
            <field name="model">qlk.engagement.article.template</field>
            <field name="arch" type="xml">
                <list string="Article Templates">
                    <field name="name"/>
                    <field name="sequence"/>
                    <field name="is_editable"/>
                    <field name="active"/>
                </list>
            </field>
        </record>

        <record id="view_engagement_article_template_form" model="ir.ui.view">
            <field name="name">qlk.engagement.article.template.form</field>
            <field name="model">qlk.engagement.article.template</field>
            <field name="arch" type="xml">
                <form string="Article Template">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="sequence"/>
                            <field name="is_editable"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="content" widget="html"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
    </data>
</odoo>
