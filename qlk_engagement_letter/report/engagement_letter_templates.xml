<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="report_engagement_letter">
        <t t-call="web.html_container">
            <t t-foreach="docs" t-as="doc">
                <t t-call="qlk_engagement_letter.report_engagement_letter_document"/>
            </t>
        </t>
    </template>

    <template id="report_engagement_letter_document">
        <t t-call="web.external_layout">
            <div class="page">
                <h2 style="color:#7b0d1e; border-bottom: 2px solid #7b0d1e; padding-bottom:8px;">Engagement Letter</h2>
                <div class="row mt16">
                    <div class="col-6">
                        <p><strong>Reference:</strong> <span t-esc="doc.reference"/></p>
                        <p><strong>Date:</strong> <span t-esc="doc.date"/></p>
                        <p><strong>Contract Type:</strong> <span t-esc="dict(doc._fields['contract_type'].selection).get(doc.contract_type)"/></p>
                        <p><strong>Department:</strong> <span t-esc="dict(doc._fields['department_type'].selection).get(doc.department_type)"/></p>
                        <p><strong>Office:</strong> <span t-esc="doc.office_name"/></p>
                    </div>
                    <div class="col-6">
                        <p><strong>License Number:</strong> <span t-esc="doc.office_license_number"/></p>
                        <p><strong>Location:</strong> <span t-esc="doc.office_location"/></p>
                        <p><strong>Email:</strong> <span t-esc="doc.office_email"/></p>
                        <p><strong>Phone:</strong> <span t-esc="doc.office_phone"/></p>
                        <p><strong>Authorized Signatory:</strong> <span t-esc="doc.office_authorized_signatory_name"/></p>
                    </div>
                </div>

                <div class="mt32">
                    <h3 style="color:#7b0d1e;">Client Details</h3>
                    <div t-if="doc.client_type == 'individual'">
                        <p><strong>Name:</strong> <span t-esc="doc.individual_full_name"/></p>
                        <p><strong>QID:</strong> <span t-esc="doc.individual_qid"/></p>
                        <p><strong>Passport:</strong> <span t-esc="doc.individual_passport"/></p>
                        <p><strong>Email:</strong> <span t-esc="doc.individual_email"/></p>
                        <p><strong>Phone:</strong> <span t-esc="doc.individual_phone"/></p>
                        <p><strong>Authorized Signatory:</strong> <span t-esc="doc.individual_authorized_signatory_name"/></p>
                    </div>
                    <div t-if="doc.client_type == 'company'">
                        <p><strong>Company:</strong> <span t-esc="doc.company_name"/></p>
                        <p><strong>CR Number:</strong> <span t-esc="doc.company_cr_number"/></p>
                        <p><strong>Location:</strong> <span t-esc="doc.company_location"/></p>
                        <p><strong>Email:</strong> <span t-esc="doc.company_email"/></p>
                        <p><strong>Phone:</strong> <span t-esc="doc.company_phone"/></p>
                        <p><strong>Authorized Signatory:</strong> <span t-esc="doc.company_authorized_signatory_name"/></p>
                        <p><strong>Signatory ID:</strong> <span t-esc="doc.company_authorized_signatory_id_number"/></p>
                        <p><strong>Signatory Nationality:</strong> <span t-esc="doc.company_authorized_signatory_nationality"/></p>
                        <p><strong>Signatory Title:</strong> <span t-esc="doc.company_authorized_signatory_title"/></p>
                    </div>
                </div>

                <div class="mt32" t-if="doc.contract_type == 'retainer'">
                    <h3 style="color:#7b0d1e;">Retainer Coverage</h3>
                    <p><strong>Scope:</strong> <span t-esc="dict(doc._fields['retainer_scope'].selection).get(doc.retainer_scope)"/></p>
                    <div t-if="doc.retainer_scope in ('corporate', 'both')">
                        <p>
                            <strong>Corporate Monthly Hours:</strong>
                            <span t-esc="doc.retainer_corporate_monthly_hour_cap"/>
                        </p>
                        <p>
                            <strong>Corporate Yearly Hours:</strong>
                            <span t-esc="doc.retainer_corporate_yearly_hour_cap"/>
                        </p>
                    </div>
                    <div t-if="doc.retainer_scope in ('litigation', 'both')">
                        <p>
                            <strong>Litigation Case Limit:</strong>
                            <span t-esc="doc.retainer_litigation_case_limit"/>
                        </p>
                    </div>
                </div>
            </div>

            <div class="page">
                <h3 style="color:#7b0d1e;">Scope of Work</h3>
                <div class="mt16" t-if="doc.scope_of_work">
                    <div t-raw="doc.scope_of_work"/>
                </div>
                <div t-if="not doc.scope_of_work" class="mt16">
                    <p>No scope of work has been specified yet.</p>
                </div>

                <h3 class="mt32" style="color:#7b0d1e;">Legal Fees</h3>
                <p>
                    <strong>Total Fees:</strong>
                    <span t-esc="doc.total_fees"/>
                    <span t-esc="doc.currency_id.display_name"/>
                </p>
                <table class="table table-sm" t-if="doc.installment_ids">
                    <thead>
                        <tr>
                            <th>Description</th>
                            <th>Amount</th>
                            <th>Due Date</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        <tr t-foreach="doc.installment_ids" t-as="inst">
                            <td t-esc="inst.description or 'Installment'"/>
                            <td><span t-esc="inst.amount"/> <span t-esc="doc.currency_id.symbol or doc.currency_id.name"/></td>
                            <td t-esc="inst.due_date"/>
                            <td t-esc="dict(inst._fields['state'].selection).get(inst.state)"/>
                        </tr>
                    </tbody>
                </table>

                <div class="row mt48">
                    <div class="col-6">
                        <p><strong>Signed on behalf of Al Hadhri Law Firm</strong></p>
                        <p><span t-esc="doc.office_authorized_signatory_name"/></p>
                        <p><span t-esc="doc.office_authorized_signatory_title"/></p>
                    </div>
                    <div class="col-6">
                        <p><strong>Signed for the Client</strong></p>
                        <p><span t-esc="doc.signatory_page2_name"/></p>
                        <p><span t-esc="doc.signatory_page2_title"/></p>
                    </div>
                </div>
            </div>

            <t t-foreach="doc.article_ids" t-as="article">
                <div class="page">
                    <h3 style="color:#7b0d1e;" t-esc="article.name"/>
                    <div t-if="article.content" t-raw="article.content"/>
                    <div t-if="not article.content">
                        <p>The content for this article matches the standard template.</p>
                    </div>
                </div>
            </t>

            <div class="page">
                <h3 style="color:#7b0d1e;">Final Signatures</h3>
                <div class="row mt32">
                    <div class="col-6">
                        <p><strong>For Al Hadhri Law Firm</strong></p>
                        <p><span t-esc="doc.office_authorized_signatory_name"/></p>
                        <p><span t-esc="doc.office_authorized_signatory_title"/></p>
                    </div>
                    <div class="col-6">
                        <p><strong>For the Client</strong></p>
                        <p><span t-esc="doc.signatory_final_name"/></p>
                        <p><span t-esc="doc.signatory_final_title"/></p>
                    </div>
                </div>
            </div>
        </t>
    </template>
</odoo>
