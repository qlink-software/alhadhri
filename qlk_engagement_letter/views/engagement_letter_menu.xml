<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="action_engagement_letters" model="ir.actions.act_window">
            <field name="name">Engagement Letters</field>
            <field name="res_model">qlk.engagement.letter</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="qlk_engagement_letter.view_engagement_letter_tree"/>
            <field name="search_view_id" ref="qlk_engagement_letter.view_engagement_letter_search"/>
            <field name="context">{'default_contract_type': 'retainer'}</field>
        </record>

        <record id="action_engagement_installments" model="ir.actions.act_window">
            <field name="name">Installments</field>
            <field name="res_model">qlk.engagement.installment</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_engagement_corporate_logs" model="ir.actions.act_window">
            <field name="name">Corporate Usage Logs</field>
            <field name="res_model">qlk.engagement.corporate.log</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_engagement_litigation_cases" model="ir.actions.act_window">
            <field name="name">Litigation Cases</field>
            <field name="res_model">qlk.engagement.litigation.case</field>
            <field name="view_mode">tree,form</field>
        </record>

        <record id="action_engagement_article_templates" model="ir.actions.act_window">
            <field name="name">Article Templates</field>
            <field name="res_model">qlk.engagement.article.template</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem id="menu_engagement_root" name="Engagement Letters" parent="qlk_law.menu_qlk_case_root" sequence="35" groups="qlk_engagement_letter.group_engagement_manager,qlk_engagement_letter.group_engagement_user,qlk_engagement_letter.group_engagement_viewer"/>
        <menuitem id="menu_engagement_letters" name="Engagement Letters" parent="menu_engagement_root" action="qlk_engagement_letter.action_engagement_letters" sequence="1" groups="qlk_engagement_letter.group_engagement_manager,qlk_engagement_letter.group_engagement_user,qlk_engagement_letter.group_engagement_viewer"/>
        <menuitem id="menu_engagement_installments" name="Installments" parent="menu_engagement_root" action="qlk_engagement_letter.action_engagement_installments" sequence="10" groups="qlk_engagement_letter.group_engagement_manager,qlk_engagement_letter.group_engagement_user"/>
        <menuitem id="menu_engagement_corporate_logs" name="Corporate Usage" parent="menu_engagement_root" action="qlk_engagement_letter.action_engagement_corporate_logs" sequence="20" groups="qlk_engagement_letter.group_engagement_manager"/>
        <menuitem id="menu_engagement_litigation_cases" name="Litigation Cases" parent="menu_engagement_root" action="qlk_engagement_letter.action_engagement_litigation_cases" sequence="30" groups="qlk_engagement_letter.group_engagement_manager"/>
        <menuitem id="menu_engagement_article_templates" name="Article Templates" parent="menu_engagement_root" action="qlk_engagement_letter.action_engagement_article_templates" sequence="40" groups="qlk_engagement_letter.group_engagement_manager"/>
    </data>
</odoo>
