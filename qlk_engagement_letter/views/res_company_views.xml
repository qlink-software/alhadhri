<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_res_config_settings_form_engagement" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.engagement</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <div class="app_settings_block" data-string="Engagement Letters" string="Engagement Letters">
                        <h2>Engagement Letter Defaults</h2>
                        <div class="row mt16">
                            <div class="col-6">
                                <label for="engagement_license_number"/>
                                <div>
                                    <field name="engagement_license_number" placeholder="License Number"/>
                                </div>
                            </div>
                            <div class="col-6">
                                <label for="engagement_office_location"/>
                                <div>
                                    <field name="engagement_office_location" placeholder="Office Location"/>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16">
                            <div class="col-6">
                                <label for="engagement_office_email"/>
                                <div>
                                    <field name="engagement_office_email" placeholder="Office Email"/>
                                </div>
                            </div>
                            <div class="col-6">
                                <label for="engagement_office_phone"/>
                                <div>
                                    <field name="engagement_office_phone" placeholder="Office Phone"/>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16">
                            <div class="col-6">
                                <label for="engagement_authorized_signatory_name"/>
                                <div>
                                    <field name="engagement_authorized_signatory_name" placeholder="Authorized Signatory Name"/>
                                </div>
                            </div>
                            <div class="col-6">
                                <label for="engagement_authorized_signatory_title"/>
                                <div>
                                    <field name="engagement_authorized_signatory_title" placeholder="Authorized Signatory Title"/>
                                </div>
                            </div>
                        </div>
                        <div class="row mt16">
                            <div class="col-12">
                                <label for="engagement_authorized_signatory_details"/>
                                <div>
                                    <field name="engagement_authorized_signatory_details" placeholder="Additional Signatory Details" widget="text"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
