<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">
    <t t-name="notification.StickyNotifier">
        <div class="noto-sticky-wrapper" t-if="state.alerts.length">
            <div class="noto-sticky-card" t-foreach="state.alerts" t-as="alert" t-key="alert.id">
                <div class="noto-sticky-head">
                    <span class="noto-sticky-type">
                        <i class="fa fa-bell-o"/> <t t-esc="alert.type_label"/>
                    </span>
                    <span class="noto-sticky-due">
                        <i class="fa fa-clock-o"/> <t t-esc="alert.due"/>
                    </span>
                </div>
                <div class="noto-sticky-title">
                    <t t-esc="alert.name"/>
                </div>
                <div class="noto-sticky-body">
                    <t t-if="alert.record_name">
                        <div class="noto-sticky-ref">
                            <i class="fa fa-link"/> <t t-esc="alert.record_name"/>
                        </div>
                    </t>
                    <t t-if="alert.note">
                        <div class="noto-sticky-note">
                            <t t-esc="alert.note"/>
                        </div>
                    </t>
                </div>
                <div class="noto-sticky-actions">
                    <button type="button" class="btn btn-secondary" t-on-click="() => this.handleAction(alert, 'snooze')">
                        Snooze 15 Minutes
                    </button>
                    <button type="button" class="btn btn-primary" t-on-click="() => this.handleAction(alert, 'open')">
                        View Record
                    </button>
                    <button type="button" class="btn btn-success" t-on-click="() => this.handleAction(alert, 'done')">
                        Action Taken
                    </button>
                </div>
            </div>
        </div>
    </t>
</templates>
