<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_qlk_task_form_project_inherit" model="ir.ui.view">
            <field name="name">qlk.task.form.project.inherit</field>
            <field name="model">qlk.task</field>
            <field name="inherit_id" ref="qlk_task_management.view_qlk_task_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form/sheet/group/field[@name='department']" position="after">
                    <field name="project_id" options="{'no_create_edit': True}"/>
                </xpath>
            </field>
        </record>

        <record id="view_qlk_task_tree_project_inherit" model="ir.ui.view">
            <field name="name">qlk.task.list.project.inherit</field>
            <field name="model">qlk.task</field>
            <field name="inherit_id" ref="qlk_task_management.view_qlk_task_tree"/>
            <field name="arch" type="xml">
                <xpath expr="//list/field[@name='department']" position="after">
                    <field name="project_id"/>
                </xpath>
            </field>
        </record>

        <record id="view_qlk_task_search_project_inherit" model="ir.ui.view">
            <field name="name">qlk.task.search.project.inherit</field>
            <field name="model">qlk.task</field>
            <field name="inherit_id" ref="qlk_task_management.view_qlk_task_search"/>
            <field name="arch" type="xml">
                <xpath expr="//search/field[@name='department']" position="after">
                    <field name="project_id"/>
                </xpath>
                <xpath expr="//search/filter[@name='filter_waiting']" position="after">
                    <filter name="filter_pre_litigation" string="Pre-Litigation" domain="[('department', '=', 'pre_litigation')]"/>
                    <filter name="filter_corporate" string="Corporate" domain="[('department', '=', 'corporate')]"/>
                    <filter name="filter_litigation" string="Litigation" domain="[('department', '=', 'litigation')]"/>
                </xpath>
                <xpath expr="//search/group" position="inside">
                    <filter name="group_project" string="Project" context="{'group_by': 'project_id'}"/>
                </xpath>
            </field>
        </record>

    </data>
</odoo>
