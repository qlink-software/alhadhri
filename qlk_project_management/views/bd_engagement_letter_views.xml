<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_bd_engagement_letter_project_inherit" model="ir.ui.view">
        <field name="name">bd.engagement.letter.project.inherit</field>
        <field name="model">bd.engagement.letter</field>
        <field name="inherit_id" ref="qlk_management.view_bd_engagement_letter_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header" position="inside">
                <button name="action_create_project" type="object" string="Create Project" class="btn-primary"
                        modifiers="{'invisible': ['|', ('state', '!=', 'approved'), ('project_id', '!=', False)]}"/>
                <button name="action_create_project" type="object" string="Open Project" class="btn-secondary"
                        modifiers="{'invisible': ['|', ('state', '!=', 'approved'), ('project_id', '=', False)]}"/>
            </xpath>
            <xpath expr="//group[field[@name='partner_id']]" position="inside">
                <field name="project_id" readonly="1" options="{'no_create': True}"/>
            </xpath>
        </field>
    </record>

</odoo>
