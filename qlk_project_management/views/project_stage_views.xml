<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_qlk_project_stage_tree" model="ir.ui.view">
            <field name="name">qlk.project.stage.list</field>
            <field name="model">qlk.project.stage</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Project Stages">
                    <field name="name"/>
                    <field name="stage_type"/>
                    <field name="sequence"/>
                    <field name="stage_code"/>
                    <field name="stage_number"/>
                    <field name="technical_code"/>
                    <field name="is_default"/>
                    <field name="auto_task_template"/>
                </list>
            </field>
        </record>

        <record id="view_qlk_project_stage_form" model="ir.ui.view">
            <field name="name">qlk.project.stage.form</field>
            <field name="model">qlk.project.stage</field>
            <field name="arch" type="xml">
                <form string="Project Stage">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="stage_type"/>
                            <field name="sequence"/>
                            <field name="technical_code"/>
                            <field name="stage_code"/>
                            <field name="stage_number"/>
                            <field name="is_default"/>
                            <field name="auto_task_template"/>
                            <field name="auto_task_name" required="auto_task_template"/>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_qlk_project_stage_search" model="ir.ui.view">
            <field name="name">qlk.project.stage.search</field>
            <field name="model">qlk.project.stage</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="stage_type"/>
                    <field name="technical_code"/>
                </search>
            </field>
        </record>

        <record id="action_qlk_project_stage" model="ir.actions.act_window">
            <field name="name">Project Stages</field>
            <field name="res_model">qlk.project.stage</field>
            <field name="view_mode">list,form</field>
        </record>

    </data>
</odoo>
