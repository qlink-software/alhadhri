<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record id="module_qlk_arbitration" model="ir.module.category">
            <field name="name">Arbitration Legal</field>
            <field name="sequence" eval="6"/>
        </record>

        <record id="group_arbitration_user" model="res.groups">
            <field name="name">Arbitration User</field>
            <field name="category_id" ref="module_qlk_arbitration"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="group_arbitration_responsible" model="res.groups">
            <field name="name">Arbitration Responsible</field>
            <field name="category_id" ref="module_qlk_arbitration"/>
            <field name="implied_ids" eval="[(4, ref('qlk_arbitration.group_arbitration_user'))]"/>
        </record>

        <record id="group_arbitration_manager" model="res.groups">
            <field name="name">Arbitration Manager</field>
            <field name="category_id" ref="module_qlk_arbitration"/>
            <field name="implied_ids" eval="[(4, ref('qlk_arbitration.group_arbitration_responsible'))]"/>
        </record>

        <record id="arbitration_case_rule_user" model="ir.rule">
            <field name="name">Arbitration Cases - Assigned Lawyer</field>
            <field name="model_id" ref="model_qlk_arbitration_case"/>
            <field name="domain_force">[('responsible_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('qlk_arbitration.group_arbitration_user')),(4, ref('qlk_arbitration.group_arbitration_responsible'))]"/>
        </record>

        <record id="arbitration_case_rule_manager" model="ir.rule">
            <field name="name">Arbitration Cases - Manager</field>
            <field name="model_id" ref="model_qlk_arbitration_case"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('qlk_arbitration.group_arbitration_manager'))]"/>
        </record>

        <record id="arbitration_session_rule_user" model="ir.rule">
            <field name="name">Arbitration Sessions - Assigned Lawyer</field>
            <field name="model_id" ref="model_qlk_arbitration_session"/>
            <field name="domain_force">[('case_id.responsible_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('qlk_arbitration.group_arbitration_user')),(4, ref('qlk_arbitration.group_arbitration_responsible'))]"/>
        </record>

        <record id="arbitration_session_rule_manager" model="ir.rule">
            <field name="name">Arbitration Sessions - Manager</field>
            <field name="model_id" ref="model_qlk_arbitration_session"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('qlk_arbitration.group_arbitration_manager'))]"/>
        </record>

        <record id="arbitration_memo_rule_user" model="ir.rule">
            <field name="name">Arbitration Memos - Assigned Lawyer</field>
            <field name="model_id" ref="model_qlk_arbitration_memo"/>
            <field name="domain_force">[('case_id.responsible_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('qlk_arbitration.group_arbitration_user')),(4, ref('qlk_arbitration.group_arbitration_responsible'))]"/>
        </record>

        <record id="arbitration_memo_rule_manager" model="ir.rule">
            <field name="name">Arbitration Memos - Manager</field>
            <field name="model_id" ref="model_qlk_arbitration_memo"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('qlk_arbitration.group_arbitration_manager'))]"/>
        </record>

        <record id="arbitration_award_rule_user" model="ir.rule">
            <field name="name">Arbitration Awards - Assigned Lawyer</field>
            <field name="model_id" ref="model_qlk_arbitration_award"/>
            <field name="domain_force">[('case_id.responsible_user_id', '=', user.id)]</field>
            <field name="groups" eval="[(4, ref('qlk_arbitration.group_arbitration_user')),(4, ref('qlk_arbitration.group_arbitration_responsible'))]"/>
        </record>

        <record id="arbitration_award_rule_manager" model="ir.rule">
            <field name="name">Arbitration Awards - Manager</field>
            <field name="model_id" ref="model_qlk_arbitration_award"/>
            <field name="domain_force">[]</field>
            <field name="groups" eval="[(4, ref('qlk_arbitration.group_arbitration_manager'))]"/>
        </record>

    </data>
</odoo>
