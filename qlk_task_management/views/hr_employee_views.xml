<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_hr_employee_form_task_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.task.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//div[contains(@class, 'oe_button_box')]" position="inside">
                <button type="object"
                        name="action_open_employee_tasks"
                        class="oe_stat_button"
                        icon="fa-clock-o">
                    <field name="task_hours_total" string="Approved Hours"/>
                </button>
            </xpath>

            <xpath expr="//sheet//notebook" position="inside">
                <page string="Tasks &amp; Hours">
                    <group>
                        <group string="This Week">
                            <field name="task_hours_week" readonly="1"/>
                        </group>
                        <group string="This Month">
                            <field name="task_hours_month" readonly="1"/>
                        </group>
                        <group string="Overview">
                            <field name="task_hours_total" readonly="1"/>
                            <field name="task_waiting_count" readonly="1"/>
                            <field name="task_rejected_count" readonly="1"/>
                        </group>
                    </group>
                    <field name="task_ids" nolabel="1" context="{'default_employee_id': id}">
                        <list editable="bottom" default_order="date_start desc">
                            <field name="approval_state" readonly="1"/>
                            <field name="department"/>
                            <field name="case_id"/>
                            <field name="hours_spent" widget="float_time" options="{'displaySeconds': True}"/>
                            <field name="date_start"/>
                            <field name="date_finished"/>
                            <field name="reviewer_id"/>
                        </list>
                        <form string="Task">
                            <sheet>
                                <group>
                                    <field name="name"/>
                                    <field name="department"/>
                                    <field name="litigation_phase" invisible="department != 'litigation'"/>
                                    <field name="case_id" readonly="department != 'litigation'"/>
                                    <field name="hours_spent" widget="float_time" options="{'displaySeconds': True}"/>
                                    <field name="date_start"/>
                                    <field name="date_finished"/>
                                    <field name="reviewer_id"/>
                                    <field name="approval_state" readonly="1"/>
                                </group>
                                <group>
                                    <field name="description"/>
                                    <field name="approval_comment" readonly="1"/>
                                </group>
                            </sheet>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
