<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_bd_pdf_builder_res_config_settings" model="ir.ui.view">
            <field name="name">res.config.settings.view.form.bd.pdf.builder</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//form" position="inside">
                    <div class="app-settings-block" data-string="PDF Builder" string="PDF Builder">
                        <div class="row mt16 o_settings_container">
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <label for="bd_proposal_template_id"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="bd_proposal_template_id"/>
                                    <p class="text-muted">Default Proposal PDF template for the builder.</p>
                                </div>
                            </div>
                            <div class="col-12 col-lg-6 o_setting_box">
                                <div class="o_setting_left_pane">
                                    <label for="bd_engagement_template_id"/>
                                </div>
                                <div class="o_setting_right_pane">
                                    <field name="bd_engagement_template_id"/>
                                    <p class="text-muted">Default Engagement Letter PDF template.</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
