<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="group_hr_nda_manager" model="res.groups">
            <field name="name">HR Contracts &amp; NDA Manager</field>
            <field name="category_id" ref="base.module_category_human_resources"/>
            <field name="implied_ids" eval="[(4, ref('hr.group_hr_manager'))]"/>
        </record>

        <record id="rule_employee_document_read_all" model="ir.rule">
            <field name="name">Employee Documents Read All</field>
            <field name="model_id" ref="model_qlk_employee_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="1"/>
            <field name="perm_write" eval="0"/>
            <field name="perm_create" eval="0"/>
            <field name="perm_unlink" eval="0"/>
        </record>

        <record id="rule_employee_document_write_own_limited" model="ir.rule">
            <field name="name">Employee Documents Write Own Limited</field>
            <field name="model_id" ref="model_qlk_employee_document"/>
            <field name="domain_force">[('requested_by', '=', user.id), ('status', 'in', ('draft', 'approved', 'signed'))]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="perm_read" eval="0"/>
            <field name="perm_write" eval="1"/>
            <field name="perm_create" eval="1"/>
            <field name="perm_unlink" eval="0"/>
        </record>
    </data>
</odoo>
