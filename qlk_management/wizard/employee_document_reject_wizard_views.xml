<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_document_reject_wizard_form" model="ir.ui.view">
            <field name="name">qlk.employee.document.reject.wizard.form</field>
            <field name="model">qlk.employee.document.reject.wizard</field>
            <field name="arch" type="xml">
                <form string="Reject Document">
                    <group>
                        <field name="document_id" readonly="1"/>
                        <field name="rejection_reason" required="1"/>
                    </group>
                    <footer>
                        <button name="action_confirm_rejection"
                                type="object"
                                string="Reject"
                                class="btn-primary"/>
                        <button string="Cancel" class="btn-secondary" special="cancel"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>
