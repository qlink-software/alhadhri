<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_bd_rejection_wizard_form" model="ir.ui.view">
        <field name="name">bd.rejection.wizard.form</field>
        <field name="model">bd.rejection.wizard</field>
        <field name="arch" type="xml">
            <form string="Rejection Reason">
                <group>
                    <field name="rejection_role" readonly="1"/>
                    <field name="rejection_reason" placeholder="Enter rejection reason..."/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Reject" class="btn-danger"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
