<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_bd_proposal_tree" model="ir.ui.view">
        <field name="name">bd.proposal.tree</field>
        <field name="model">bd.proposal</field>
        <field name="arch" type="xml">
            <list string="Proposals">
                <field name="code"/>
                <field name="name"/>
                <field name="proposal_type"/>
                <field name="client_code"/>
                <field name="lead_id"/>
                <field name="partner_id"/>
                <field name="date"/>
                <field name="legal_fees"/>
                <field name="collected_amount"/>
                <field name="remaining_amount"/>
                <field name="state"/>
            </list>
        </field>
    </record>

    <record id="view_bd_proposal_form" model="ir.ui.view">
        <field name="name">bd.proposal.form</field>
        <field name="model">bd.proposal</field>
        <field name="arch" type="xml">
            <form string="Business Proposal" create="true" edit="true">
                <header>
                    <button name="action_send_for_approval" type="object" string="Submit for Approval"
                            class="btn-primary"
                            modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-success"
                            groups="qlk_management.bd_manager_group"
                            modifiers="{'invisible': ['|', ('state', '!=', 'waiting_manager_approval'), ('approval_role', '!=', 'manager')]}"/>
                    <button name="action_approve" type="object" string="Approve" class="btn-success"
                            groups="qlk_management.bd_assistant_manager_group"
                            modifiers="{'invisible': ['|', ('state', '!=', 'waiting_manager_approval'), ('approval_role', '!=', 'assistant_manager')]}"/>
                    <button name="action_reject" type="object" string="Reject with Reason" class="btn-danger"
                            groups="qlk_management.bd_manager_group"
                            modifiers="{'invisible': ['|', ('state', '!=', 'waiting_manager_approval'), ('approval_role', '!=', 'manager')]}"/>
                    <button name="action_reject" type="object" string="Reject with Reason" class="btn-danger"
                            groups="qlk_management.bd_assistant_manager_group"
                            modifiers="{'invisible': ['|', ('state', '!=', 'waiting_manager_approval'), ('approval_role', '!=', 'assistant_manager')]}"/>
                    <button name="action_client_approve" type="object" string="Client Approve" class="btn-success"
                            modifiers="{'invisible': [('state', '!=', 'waiting_client_approval')]}"/>
                    <button name="action_client_reject" type="object" string="Client Reject with Reason" class="btn-danger"
                            modifiers="{'invisible': [('state', '!=', 'waiting_client_approval')]}"/>
                    <button name="action_reset_to_draft" type="object" string="Reset to Draft"
                            modifiers="{'invisible': [('state', 'not in', ['rejected', 'cancelled'])]}"/>
                    <button name="action_create_engagement_letter" type="object" string="Create Engagement Letter"
                            class="btn-secondary"
                            modifiers="{'invisible': ['|', ('state', '!=', 'approved_client'), ('engagement_letter_id', '!=', False)]}"/>
                    <button name="action_create_engagement_letter" type="object" string="Open Engagement Letter"
                            class="btn-secondary"
                            modifiers="{'invisible': ['|', ('state', '!=', 'approved_client'), ('engagement_letter_id', '=', False)]}"/>
                    <field name="state" widget="statusbar"
                           statusbar_visible="draft,waiting_manager_approval,approved_manager,waiting_client_approval,approved_client,rejected,cancelled"
                           statusbar_colors="{'draft': 'blue', 'waiting_manager_approval': 'orange', 'approved_manager': 'success', 'waiting_client_approval': 'warning', 'approved_client': 'success', 'rejected': 'danger', 'cancelled': 'muted'}"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_client_attachments"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-paperclip"
                                string="Client Documents"
                                modifiers="{'invisible': [('partner_id', '=', False)]}">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Client Documents</span>
                            </div>
                        </button>
                    </div>
                    <group string="Document Details">
                        <group>
                            <field name="proposal_type" invisible="1"/>
                            <field name="code" string="Proposal Number" readonly="1"
                                   modifiers="{'invisible': [('proposal_type', '=', 'el')]}"/>
                            <field name="code" string="Engagement Letter Number" readonly="1"
                                   modifiers="{'invisible': [('proposal_type', '!=', 'el')]}"/>
                            <field name="date"/>
                        </group>
                        <group>
                            <field name="client_code" readonly="1" modifiers="{'invisible': [('client_code', '=', False)]}"/>
                            <field name="lead_id" options="{'no_create': True}"/>
                            <field name="engagement_letter_id" readonly="1" options="{'no_create': True}"/>
                            <field name="reviewer_id"/>
                        </group>
                    </group>
                    <group string="Client &amp; General Info">
                        <field name="client_id"/>
                        <field name="engagement_type"/>
                        <field name="reference"/>
                        <field name="document_type"/>
                    </group>
                    <group string="Scope / Legal Fees">
                        <field name="legal_fees_lines" nolabel="1"
                               context="{'default_currency_id': currency_id, 'default_proposal_id': id}"
                               modifiers="{'readonly': [('state', 'in', ['approved_manager', 'waiting_client_approval', 'approved_client'])]}">
                            <list editable="bottom">
                                <field name="description"/>
                                <field name="amount"/>
                                <field name="due_date"/>
                            </list>
                        </field>
                        <group>
                            <field name="collected_amount" readonly="1"/>
                            <field name="remaining_amount" readonly="1"/>
                        </group>
                    </group>
                    <group string="Internal Roles &amp; Approval Flow">
                        <field name="manager_id"/>
                        <field name="assistant_manager_id"/>
                    </group>
                    <group>
                        <group>
                            <field name="lawyer_id"/>
                            <field name="hourly_cost" readonly="1"/>
                            <field name="planned_hours"/>
                            <field name="total_estimated_cost" readonly="1"/>
                        </group>
                        <group>
                            <field name="company_id" readonly="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Scope of Work">
                            <field name="scope_of_work" nolabel="1"/>
                        </page>
                        <page string="Terms &amp; Conditions">
                            <field name="terms_conditions" nolabel="1"/>
                        </page>
                        <page string="Rejection Reason">
                            <group>
                                <field name="rejection_reason"/>
                            </group>
                        </page>
                        <page string="Tasks / Hours">
                            <field name="time_entry_ids" context="{'default_proposal_id': id, 'default_department': 'management'}">
                                <list editable="bottom">
                                    <field name="name"/>
                                    <field name="department"/>
                                    <field name="employee_id"/>
                                    <field name="hours_spent"/>
                                    <field name="date_start"/>
                                </list>
                                <form string="Task / Hours">
                                    <sheet>
                                        <group>
                                            <field name="name"/>
                                            <field name="employee_id"/>
                                            <field name="department"/>
                                            <field name="hours_spent"/>
                                            <field name="date_start"/>
                                        </group>
                                        <group>
                                            <field name="description"/>
                                        </group>
                                    </sheet>
                                </form>
                            </field>
                        </page>
                    </notebook>
                    <group string="Financial &amp; Billing Info">
                        <field name="currency_id"
                               modifiers="{'readonly': [('state', 'in', ['approved_manager', 'waiting_client_approval', 'approved_client'])]}"/>
                        <field name="total_amount" readonly="1"/>
                        <field name="payment_status" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- UI/UX adjustments for proposal form (metadata header, client info, scope/legal fees) -->
    <record id="view_bd_proposal_form_uiux" model="ir.ui.view">
        <field name="name">bd.proposal.form.uiux</field>
        <field name="model">bd.proposal</field>
        <field name="inherit_id" ref="view_bd_proposal_form"/>
        <field name="arch" type="xml">
            <!-- Replace Document Details group with compact metadata -->
            <xpath expr="//group[.//field[@name='proposal_type']]" position="replace">
                <group string="Document Details">
                    <group>
                        <field name="name" string="Proposal Number" readonly="1"/>
                        <field name="create_date" readonly="1"/>
                        <field name="approval_role"/>
                    </group>
                </group>
            </xpath>

            <!-- Keep only client_id, client_code, and lawyer details in Client & General Info -->
            <xpath expr="//group[.//field[@name='client_id'] and .//field[@name='engagement_type']]" position="replace">
                <group string="Client &amp; General Info">
                    <field name="client_id" required="1"/>
                    <field name="client_code" readonly="1" modifiers="{'invisible': [('client_code', '=', False)]}"/>
                    <field name="lawyer_id"/>
                    <field name="lawyer_cost_hour" readonly="1"/>
                </group>
            </xpath>

            <!-- Opportunity field: show only when created from CRM -->
            <xpath expr="//group[.//field[@name='client_id'] and .//field[@name='client_code']]" position="after">
                <group>
                    <field name="opportunity_id" modifiers="{'invisible': [('opportunity_id', '=', False)]}"/>
                </group>
            </xpath>

            <!-- Remove scope/legal fees from main body -->
            <xpath expr="//group[.//field[@name='legal_fees_lines'] and .//field[@name='collected_amount']]" position="replace"/>

            <!-- Remove legacy approval role group -->
            <xpath expr="//group[.//field[@name='manager_id'] or .//field[@name='assistant_manager_id']]" position="replace"/>

            <!-- Remove lawyer fields from the additional details group -->
            <xpath expr="//group[.//field[@name='planned_hours']]//field[@name='lawyer_id']" position="replace"/>
            <xpath expr="//group[.//field[@name='planned_hours']]//field[@name='hourly_cost']" position="replace"/>

            <!-- Add dedicated Scope / Legal Fees page as the first tab -->
            <xpath expr="//form//notebook/page[1]" position="before">
                <page string="Scope / Legal Fees">
                    <group>
                        <field name="legal_fees_lines" nolabel="1"
                               context="{'default_currency_id': currency_id, 'default_proposal_id': id}"
                               modifiers="{'readonly': [('state', 'in', ['approved_manager', 'waiting_client_approval', 'approved_client'])]}">
                            <list editable="bottom">
                                <field name="description"/>
                                <field name="amount"/>
                                <field name="due_date"/>
                            </list>
                        </field>
                        <group>
                            <field name="collected_amount" readonly="1"/>
                            <field name="remaining_amount" readonly="1"/>
                        </group>
                    </group>
                </page>
            </xpath>
        </field>
    </record>

    <!-- Approval role placement above workflow buttons -->
    <record id="view_bd_proposal_form_approval_role_header" model="ir.ui.view">
        <field name="name">bd.proposal.form.approval.role.header</field>
        <field name="model">bd.proposal</field>
        <field name="inherit_id" ref="view_bd_proposal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_send_for_approval']" position="before"/>
        </field>
    </record>

    <!-- Workflow button visibility rules -->
    <record id="view_bd_proposal_form_buttons_visibility" model="ir.ui.view">
        <field name="name">bd.proposal.form.buttons.visibility</field>
        <field name="model">bd.proposal</field>
        <field name="inherit_id" ref="view_bd_proposal_form"/>
        <field name="arch" type="xml">
            <xpath expr="//header/button[@name='action_send_for_approval']" position="replace">
                <button name="action_send_for_approval" type="object" string="Submit for Approval"
                        class="btn-primary" modifiers="{'invisible': [('state', '!=', 'draft')]}"/>
            </xpath>
            <xpath expr="//header/button[@name='action_approve']" position="replace">
                <button name="action_approve" type="object" string="Approve" class="btn-success"
                        groups="qlk_management.bd_manager_group"
                        modifiers="{'invisible': ['|', ('state', '!=', 'waiting_manager_approval'), ('approval_role', '!=', 'manager')]}"/>
                <button name="action_approve" type="object" string="Approve" class="btn-success"
                        groups="qlk_management.bd_assistant_manager_group"
                        modifiers="{'invisible': ['|', ('state', '!=', 'waiting_manager_approval'), ('approval_role', '!=', 'assistant_manager')]}"/>
            </xpath>
            <xpath expr="//header/button[@name='action_reject']" position="replace">
                <button name="action_reject" type="object" string="Reject with Reason" class="btn-danger"
                        groups="qlk_management.bd_manager_group"
                        modifiers="{'invisible': ['|', ('state', '!=', 'waiting_manager_approval'), ('approval_role', '!=', 'manager')]}"/>
                <button name="action_reject" type="object" string="Reject with Reason" class="btn-danger"
                        groups="qlk_management.bd_assistant_manager_group"
                        modifiers="{'invisible': ['|', ('state', '!=', 'waiting_manager_approval'), ('approval_role', '!=', 'assistant_manager')]}"/>
            </xpath>
            <xpath expr="//header/button[@name='action_client_approve']" position="replace">
                <button name="action_client_approve" type="object" string="Client Approve" class="btn-success"
                        modifiers="{'invisible': [('state', '!=', 'waiting_client_approval')]}"/>
            </xpath>
            <xpath expr="//header/button[@name='action_client_reject']" position="replace">
                <button name="action_client_reject" type="object" string="Client Reject with Reason" class="btn-danger"
                        modifiers="{'invisible': [('state', '!=', 'waiting_client_approval')]}"/>
            </xpath>
            <xpath expr="//header/button[@name='action_reset_to_draft']" position="replace">
                <button name="action_reset_to_draft" type="object" string="Reset to Draft"
                        modifiers="{'invisible': [('state', 'not in', ['rejected', 'cancelled'])]}"/>
            </xpath>
        </field>
    </record>

    <record id="view_bd_proposal_search" model="ir.ui.view">
        <field name="name">bd.proposal.search</field>
        <field name="model">bd.proposal</field>
        <field name="arch" type="xml">
            <search>
                <field name="code"/>
                <field name="name"/>
                <field name="lead_id"/>
                <field name="partner_id"/>
                <field name="client_code"/>
                <filter name="el_type" string="Engagement Letters" domain="[('proposal_type', '=', 'el')]"/>
                <filter name="proposal_only" string="Proposals" domain="[('proposal_type', '=', 'proposal')]"/>
                <filter name="approved" string="Approved" domain="[('state','=','approved_client')]"/>
                <filter name="waiting" string="Waiting Approval" domain="[('state','=','waiting_manager_approval')]"/>
                <filter name="rejected" string="Rejected" domain="[('state','=','rejected')]"/>
                <group expand="0" string="Group By">
                    <filter name="group_state" string="State" domain="[]" context="{'group_by': 'state'}"/>
                    <filter name="group_client" string="Client" domain="[]" context="{'group_by': 'partner_id'}"/>
                    <filter name="group_type" string="Type" domain="[]" context="{'group_by': 'proposal_type'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="view_bd_proposal_kanban" model="ir.ui.view">
        <field name="name">bd.proposal.kanban</field>
        <field name="model">bd.proposal</field>
        <field name="arch" type="xml">
            <kanban default_group_by="state" class="o_kanban_small_column" default_order="state">
                <field name="client_code"/>
                <field name="proposal_type"/>
                <templates>
                    <t t-name="kanban-box">
                        <div t-att-class="'oe_kanban_global_click card bg-light o_kanban_record ' + (record.state and record.state.raw_value or '')">
                            <strong class="mb-2 d-block" t-esc="record.code and record.code.value or record.name and record.name.value or ''"/>
                            <div class="o_kanban_primary_bottom">
                                <div>
                                    <span class="fw-bold" t-esc="record.partner_id and record.partner_id.value and record.partner_id.value[1] or ''"/>
                                </div>
                                <div class="text-muted">
                                    <span>Fees:</span>
                                    <t t-esc="record.legal_fees and record.legal_fees.value or 0.0"/>
                                </div>
                                <div class="text-muted">
                                    <span>Status:</span>
                                    <t t-esc="record.state and record.state.value or ''"/>
                                </div>
                                <div class="text-muted" t-if="record.client_code and record.client_code.value">
                                    <span>Client Code:</span>
                                    <t t-esc="record.client_code.value"/>
                                </div>
                                <div class="badge text-bg-primary"
                                     t-if="record.proposal_type and record.proposal_type.raw_value == 'el'">
                                    Engagement Letter
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_bd_proposal_graph" model="ir.ui.view">
        <field name="name">bd.proposal.graph</field>
        <field name="model">bd.proposal</field>
        <field name="arch" type="xml">
            <graph string="Proposal Totals" type="bar">
                <field name="legal_fees" type="measure"/>
                <field name="state" type="row"/>
            </graph>
        </field>
    </record>

    <record id="view_bd_proposal_pivot" model="ir.ui.view">
        <field name="name">bd.proposal.pivot</field>
        <field name="model">bd.proposal</field>
        <field name="arch" type="xml">
            <pivot string="Proposals by Status">
                <field name="state" type="row"/>
                <field name="legal_fees" type="measure"/>
                <field name="collected_amount" type="measure"/>
            </pivot>
        </field>
    </record>

    <record id="action_bd_proposal" model="ir.actions.act_window">
        <field name="name">BD Proposals</field>
        <field name="res_model">bd.proposal</field>
        <field name="view_mode">kanban,list,form,graph,pivot</field>
        <field name="search_view_id" ref="view_bd_proposal_search"/>
        <field name="view_ids" eval="[(5, 0, 0),
            (0, 0, {'view_mode': 'kanban', 'view_id': ref('view_bd_proposal_kanban')}),
            (0, 0, {'view_mode': 'list', 'view_id': ref('view_bd_proposal_tree')}),
            (0, 0, {'view_mode': 'form', 'view_id': ref('view_bd_proposal_form')}),
            (0, 0, {'view_mode': 'graph', 'view_id': ref('view_bd_proposal_graph')}),
            (0, 0, {'view_mode': 'pivot', 'view_id': ref('view_bd_proposal_pivot')})]"/>
    </record>

    <record id="action_bd_proposal_report_total" model="ir.actions.act_window">
        <field name="name">Total Proposals</field>
        <field name="res_model">bd.proposal</field>
        <field name="view_mode">graph</field>
        <field name="view_id" ref="view_bd_proposal_graph"/>
    </record>

    <record id="action_bd_proposal_report_collected" model="ir.actions.act_window">
        <field name="name">Amount Collected</field>
        <field name="res_model">bd.proposal</field>
        <field name="view_mode">graph</field>
        <field name="context">{'graph_measure': 'collected_amount'}</field>
        <field name="view_id" ref="view_bd_proposal_graph"/>
    </record>

    <record id="action_bd_proposal_report_status" model="ir.actions.act_window">
        <field name="name">Proposals by Status</field>
        <field name="res_model">bd.proposal</field>
        <field name="view_mode">pivot</field>
        <field name="view_id" ref="view_bd_proposal_pivot"/>
    </record>

</odoo>
