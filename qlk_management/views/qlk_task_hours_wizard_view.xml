<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_qlk_task_hours_wizard_form" model="ir.ui.view">
        <field name="name">qlk.task.hours.wizard.form</field>
        <field name="model">qlk.task.hours.wizard</field>
        <field name="arch" type="xml">
            <form string="Hours Logging">
                <!-- Wizard forces hours logging before save -->
                <group>
                    <field name="name" required="1"/>
                    <field name="hours" required="1"/>
                    <field name="date"/>
                    <field name="user_id"/>
                </group>
                <footer>
                    <button name="action_confirm" type="object" string="Save" class="btn-primary"/>
                    <button string="Cancel" class="btn-secondary" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_qlk_task_hours_wizard" model="ir.actions.act_window">
        <field name="name">Hours Logging</field>
        <field name="res_model">qlk.task.hours.wizard</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_qlk_task_hours_wizard_form"/>
        <field name="target">new</field>
        <field name="context">{}</field>
    </record>
</odoo>
