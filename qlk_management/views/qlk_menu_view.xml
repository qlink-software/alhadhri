<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="0">

    <delete id="action_bd_management_dashboard" model="ir.actions.client"/>
    <delete id="qlk_bd_menu_dashboard" model="ir.ui.menu"/>
    <delete id="qlk_bd_root_menu" model="ir.ui.menu"/>

    <record id="action_management_dashboard" model="ir.actions.client">
        <field name="name">Management Dashboard</field>
        <field name="tag">qlk_management_dashboard</field>
        <field name="target">main</field>
    </record>

    <record id="action_bd_client_data" model="ir.actions.act_window">
        <field name="name">Client Data</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="context">{'search_default_customer': 1, 'default_customer_rank': 1, 'group_by': 'industry_id'}</field>
    </record>

    <menuitem id="menu_management_root"
              name="BD"
              web_icon="crm,static/description/icon.png"
              sequence="30"/>

    <!-- <menuitem id="menu_management_dashboard"
              name="Dashboard"
              parent="menu_management_root"
              action="action_management_dashboard"
              sequence="10"/> -->

    <menuitem id="menu_management_pipeline"
              name="Pipeline"
              parent="menu_management_root"
              action="crm.crm_lead_action_pipeline"
              sequence="20"/>

    <menuitem id="qlk_bd_menu_clients"
              name="Client Data"
              parent="menu_management_root"
              action="action_bd_client_data"
              sequence="30"/>

    <menuitem id="qlk_bd_menu_proposal"
              name="Proposal"
              parent="menu_management_root"
              action="action_bd_proposal"
              sequence="40"/>

    <menuitem id="qlk_bd_menu_engagement"
              name="Engagement Letter"
              parent="menu_management_root"
              action="action_bd_engagement_letter"
              sequence="50"/>

    <menuitem id="qlk_bd_menu_client_poa"
              name="Client POA Management"
              parent="menu_management_root"
              action="action_client_documents"
              sequence="60"/>

</odoo>
