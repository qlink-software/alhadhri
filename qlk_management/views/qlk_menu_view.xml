<?xml version="1.0" encoding="UTF-8"?>
<odoo noupdate="0">

    <record id="action_bd_management_dashboard" model="ir.actions.client">
        <field name="name">BD Dashboard</field>
        <field name="tag">qlk.management.dashboard</field>
        <field name="target">main</field>
    </record>

    <record id="action_bd_client_data" model="ir.actions.act_window">
        <field name="name">Client Data</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">kanban,list,form</field>
        <field name="search_view_id" ref="base.view_res_partner_filter"/>
        <field name="context">{'search_default_customer': 1, 'default_customer_rank': 1, 'group_by': 'industry_id'}</field>
    </record>

    <menuitem id="qlk_bd_root_menu"
              name="BD"
              web_icon="sale_management,static/description/icon.png"
              sequence="30"/>

    <menuitem id="qlk_bd_menu_clients"
              name="Client Data"
              parent="qlk_bd_root_menu"
              action="action_bd_client_data"
              sequence="10"/>

    <menuitem id="qlk_bd_menu_dashboard"
              name="Dashboard"
              parent="qlk_bd_root_menu"
              action="action_bd_management_dashboard"
              sequence="20"/>

    <menuitem id="qlk_bd_menu_proposal"
              name="Proposal"
              parent="qlk_bd_root_menu"
              action="action_bd_proposal"
              sequence="30"/>

    <menuitem id="qlk_bd_menu_engagement"
              name="Engagement Letter"
              parent="qlk_bd_root_menu"
              action="action_bd_engagement_letter"
              sequence="40"/>

    <menuitem id="qlk_bd_menu_client_poa"
              name="Client POA Management"
              parent="qlk_bd_root_menu"
              action="action_client_documents"
              sequence="50"/>

</odoo>
