<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="view_qlk_project_list" model="ir.ui.view">
            <field name="name">qlk.project.list</field>
            <field name="model">qlk.project</field>
            <field name="type">list</field>
            <field name="arch" type="xml">
                <list string="Projects" default_order="create_date desc">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="department" widget="badge" invisible="1"/>
                    <field name="client_id"/>
                    <field name="related_case_display" string="Related Matter"/>
                    <field name="assigned_employee_ids"/>
                    <field name="task_hours_total"/>
                    <field name="poa_state" widget="badge"/>
                    <field name="transfer_ready"/>
                </list>
            </field>
        </record>

        <record id="view_qlk_project_form" model="ir.ui.view">
            <field name="name">qlk.project.form</field>
            <field name="model">qlk.project</field>
            <field name="arch" type="xml">
                <form string="Project">
                    <header>
                        <button name="action_request_poa" type="object" string="Request POA" class="btn-warning"
                                invisible="department != 'litigation' or poa_state != 'draft'"/>
                        <button name="action_mark_poa_received" type="object" string="POA Received" class="btn-primary"
                                invisible="department != 'litigation' or poa_state != 'requested'"/>
                        <button name="action_mark_poa_uploaded" type="object" string="POA Uploaded" class="btn-success"
                                invisible="department != 'litigation' or (poa_state != 'received' and poa_state != 'uploaded')"/>
                        <button name="action_open_log_hours" type="object" string="Log Hours" class="btn-primary"/>
                        <button name="action_create_pre_litigation_case" type="object" string="Create Pre-Litigation Case"
                                class="btn-primary"
                                modifiers="{'invisible': ['|', '|', ('project_type', '!=', 'litigation'), ('litigation_stage', '!=', 'pre'), ('pre_litigation_id', '!=', False)]}"/>
                        <button name="action_create_litigation_case" type="object" string="Create Case"
                                class="btn-primary"
                                modifiers="{'invisible': ['|', '|', ('project_type', '!=', 'litigation'), ('litigation_stage', '!=', 'court'), ('case_id', '!=', False)]}"/>
                        <button name="action_transfer_to_corporate" type="object" string="Create Corporate Case"
                                class="btn-primary"
                                invisible="department != 'corporate' or corporate_case_id"/>
                        <button name="action_transfer_to_arbitration" type="object" string="Create Arbitration Case"
                                class="btn-primary"
                                invisible="department != 'arbitration' or arbitration_case_id"/>
                    </header>
                    <sheet>
                        <div class="alert alert-warning o_qlk_hours_notice">You must enter hours.</div>
                        <div class="oe_title">
                            <h1>
                                <field name="code" readonly="1"/>
                            </h1>
                            <h2>
                                <field name="name"/>
                            </h2>
                        </div>

                        <div class="oe_button_box" name="button_box">
                            <button type="object" class="oe_stat_button" name="action_view_hours" icon="fa-clock-o">
                                <field name="task_hours_total" string="Approved Hours"/>
                            </button>
                            <button type="object" class="oe_stat_button" name="action_view_tasks" icon="fa-tasks">
                                <field name="task_count" string="Tasks"/>
                            </button>
                            <button type="object" class="oe_stat_button" name="action_open_related_case" icon="fa-external-link"
                                    modifiers="{'invisible': [('related_case_display', '=', False)]}">
                                <field name="related_case_display" string="Related Matter" readonly="1"/>
                            </button>
                        </div>

                        <group>
                            <group>
                                <field name="department" invisible="1"/>
                                <field name="project_type"/>
                                <field name="retainer_type"/>
                                <field name="estimated_hours"/>
                                <field name="notify_datetime"/>
                                <field name="litigation_stage" modifiers="{'invisible': [('project_type', '!=', 'litigation')]}"/>
                                <field name="litigation_stage_code" string="Litigation Degree" invisible="1"/>
                                <field name="litigation_stage_iteration" modifiers="{'invisible': ['|', ('project_type', '!=', 'litigation'), ('litigation_stage', '!=', 'court')]}"/>
                                <field name="litigation_court_id" modifiers="{'invisible': [('project_type', '!=', 'litigation')]}"/>
                                <field name="litigation_case_type_id" modifiers="{'invisible': [('project_type', '!=', 'litigation')]}"/>
                                <field name="client_id" string="Client Name"/>
                                <field name="engagement_id" readonly="1"/>
                                <field name="lawyer_id"/>
                                <field name="lawyer_ids" widget="many2many_tags"/>
                                <field name="lawyer_cost_hour" readonly="1"/>
                                <field name="client_capacity"/>
                                <field name="litigation_case_number" modifiers="{'readonly': True, 'invisible': [('project_type', '!=', 'litigation')]}"/>
                                <field name="case_id" invisible="department != 'litigation'"/>
                                <field name="corporate_case_id"
                                       invisible="department != 'corporate'"
                                       domain="['|', ('project_id', '=', False), ('project_id', '=', id)]"
                                       context="{'default_project_id': id, 'default_client_id': client_id}"/>
                                <field name="arbitration_case_id"
                                       invisible="department != 'arbitration'"
                                       domain="['|', ('project_id', '=', False), ('project_id', '=', id)]"
                                       context="{'default_project_id': id, 'default_client_id': client_id}"/>
                                <field name="assigned_employee_ids" widget="many2many_tags"/>
                                <field name="owner_id"/>
                            </group>
                            <group>
                                <field name="poa_state" widget="badge"/>
                                <field name="poa_requested_on" readonly="1"/>
                                <field name="poa_received_on" readonly="1"/>
                                <field name="deadline"/>
                                <field name="transfer_ready"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description">
                                <field name="description" widget="html"/>
                            </page>
                            <page string="Legal Fees">
                                <field name="legal_fee_line_ids" context="{'default_project_id': id}">
                                    <list editable="bottom">
                                        <field name="description"/>
                                        <field name="amount"/>
                                        <field name="due_date"/>
                                    </list>
                                </field>
                                <field name="scope_of_work"/>
                            </page>
                            <page string="Client Attachments">
                                <field name="client_attachment_ids" widget="many2many_binary" nolabel="1"/>
                            </page>
                            <page string="POA Documents" invisible="department != 'litigation'">
                                <field name="poa_attachment_ids" widget="many2many_binary"/>
                            </page>
                            <page string="Tasks">
                                <field name="task_ids" context="{'default_project_id': id, 'default_department': 'management'}" nolabel="1">
                                    <list editable="bottom" default_order="date_start desc">
                                        <field name="approval_state" readonly="1"/>
                                        <field name="name"/>
                                        <field name="department"/>
                                        <field name="employee_id"/>
                                        <field name="hours_spent" widget="float_time" options="{'displaySeconds': True}"/>
                                        <field name="date_start"/>
                                        <field name="date_finished"/>
                                        <field name="reviewer_id"/>
                                    </list>
                                </field>
                            </page>
                            <page string="Notes">
                                <field name="notes"/>
                            </page>
                            <!-- <page string="Workflow Stages" modifiers="{'invisible': [('project_type', '!=', 'litigation')]}">
                                <field name="stage_line_ids" context="{'default_project_id': id}"/>
                            </page> -->
                        </notebook>
                    </sheet>
                    <chatter/>
                </form>
            </field>
        </record>

        <record id="view_qlk_project_search" model="ir.ui.view">
            <field name="name">qlk.project.search</field>
            <field name="model">qlk.project</field>
            <field name="arch" type="xml">
                <search string="Projects">
                    <field name="name" filter_domain="[('name', 'ilike', self)]"/>
                    <field name="code" filter_domain="[('code', 'ilike', self)]"/>
                    <field name="client_id"/>
                    <field name="case_id"/>
                    <filter name="filter_my_projects" string="My Projects"
                            domain="['|', ('assigned_employee_ids.user_id', '=', uid), ('owner_id', '=', uid)]"/>
                    <filter name="filter_transfer_ready" string="Ready for Litigation" domain="[('transfer_ready', '=', True)]"/>
                    <group expand="0" string="Group By">
                        <filter name="group_client" string="Client" context="{'group_by': 'client_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="action_qlk_project" model="ir.actions.act_window">
            <field name="name">Projects</field>
            <field name="res_model">qlk.project</field>
            <field name="view_mode">list,form</field>
            <field name="context">{'search_default_filter_my_projects': 1}</field>
        </record>

        <record id="action_qlk_project_tasks" model="ir.actions.act_window">
            <field name="name">Project Tasks</field>
            <field name="res_model">qlk.task</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('project_id', '!=', False)]</field>
            <field name="context">{'search_default_group_project': 1}</field>
        </record>

        <record id="view_qlk_task_hours_list" model="ir.ui.view">
            <field name="name">qlk.task.hours.list</field>
            <field name="model">qlk.task</field>
            <field name="arch" type="xml">
                <list string="Approved Hours" create="false" edit="false">
                    <field name="project_id"/>
                    <field name="assigned_user_id"/>
                    <field name="employee_id"/>
                    <field name="date_start"/>
                    <field name="hours_spent" sum="Total Hours" widget="float_time" options="{'displaySeconds': True}"/>
                    <field name="description"/>
                </list>
            </field>
        </record>

        <record id="action_qlk_project_hours" model="ir.actions.act_window">
            <field name="name">Project Hours</field>
            <field name="res_model">qlk.task</field>
            <field name="view_mode">list,form</field>
            <!-- <field name="domain">[('project_id', '!=', False), ('approval_state', '=', 'approved')]</field> -->
            <field name="views">[(ref('qlk_management.view_qlk_task_hours_list'), 'list'), (ref('qlk_task_management.view_qlk_task_form'), 'form')]</field>
            <field name="context">{'group_by': 'assigned_user_id'}</field>
        </record>

        <record id="action_qlk_project_litigation" model="ir.actions.act_window">
            <field name="name">Litigation Pipeline</field>
            <field name="res_model">qlk.project</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('department', '=', 'litigation')]</field>
            <field name="context">{'default_department': 'litigation'}</field>
        </record>

        <record id="action_qlk_project_corporate" model="ir.actions.act_window">
            <field name="name">Corporate Pipeline</field>
            <field name="res_model">qlk.project</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('department', '=', 'corporate')]</field>
            <field name="context">{'default_department': 'corporate'}</field>
        </record>

        <record id="action_qlk_project_arbitration" model="ir.actions.act_window">
            <field name="name">Arbitration Pipeline</field>
            <field name="res_model">qlk.project</field>
            <field name="view_mode">list,form</field>
            <field name="domain">[('department', '=', 'arbitration')]</field>
            <field name="context">{'default_department': 'arbitration'}</field>
        </record>

    </data>
</odoo>
