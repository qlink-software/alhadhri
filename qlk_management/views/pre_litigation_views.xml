<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_pre_litigation_tree" model="ir.ui.view">
            <field name="name">qlk.pre.litigation.tree</field>
            <field name="model">qlk.pre.litigation</field>
            <field name="arch" type="xml">
                <list string="Pre-Litigation Cases">
                    <field name="name"/>
                    <field name="client_id"/>
                    <field name="project_id"/>
                    <field name="lawyer_employee_id"/>
                    <field name="state"/>
                    <field name="case_id"/>
                </list>
            </field>
        </record>

        <record id="view_pre_litigation_form" model="ir.ui.view">
            <field name="name">qlk.pre.litigation.form</field>
            <field name="model">qlk.pre.litigation</field>
            <field name="arch" type="xml">
                <form string="Pre-Litigation">
                    <header>
                        <button name="action_open_approval_wizard"
                                string="Approvals"
                                class="btn-secondary"
                                type="object"/>
                        <button name="action_reset_to_draft"
                                string="Reset to Draft"
                                class="btn-secondary"
                                type="object"
                                invisible="state == 'draft' or state == 'done'"/>
                        <button name="action_to_translation"
                                string="Send to Translation"
                                class="btn-primary"
                                type="object"
                                invisible="state != 'draft' or approvals_blocked"/>
                        <button name="action_to_memo"
                                string="Send to Memo"
                                class="btn-primary"
                                type="object"
                                invisible="state != 'translation' or approvals_blocked"/>
                        <button name="action_to_review"
                                string="Request Internal Approval"
                                class="btn-primary"
                                type="object"
                                invisible="state != 'memo' or approvals_blocked"/>
                        <button name="action_to_client_approval"
                                string="Request Client Approval"
                                class="btn-primary"
                                type="object"
                                invisible="state != 'review' or approvals_blocked"/>
                        <button name="action_to_office_sign"
                                string="Confirm Signature"
                                class="btn-primary"
                                type="object"
                                invisible="state != 'client_approval' or approvals_blocked"/>
                        <button name="action_to_registration"
                                string="Register Case"
                                class="btn-primary"
                                type="object"
                                invisible="state != 'office_sign' or approvals_blocked"/>
                        <button name="action_to_correction"
                                string="Request Correction"
                                class="btn-primary"
                                type="object"
                                invisible="state != 'registration' or approvals_blocked"/>
                        <button name="action_to_fee_payment"
                                string="Confirm Fee Payment"
                                class="btn-primary"
                                type="object"
                                invisible="state != 'correction' or approvals_blocked"/>
                        <button name="action_create_litigation_case"
                                string="Create Litigation Case"
                                class="oe_highlight"
                                type="object"
                                invisible="state != 'fee_payment' or approvals_blocked"/>
                        <field name="state" widget="statusbar"
                               statusbar_visible="draft,translation,memo,review,client_approval,office_sign,registration,correction,fee_payment,done"
                               statusbar_clickable="1"/>
                    </header>
                    <sheet>
                        <div class="oe_title">
                            <label for="name"/>
                            <h1>
                                <field name="name"/>
                            </h1>
                        </div>
                        <field name="approvals_submitted" invisible="1"/>
                        <field name="approvals_required" invisible="1"/>
                        <field name="approvals_completed" invisible="1"/>
                        <field name="approvals_rejected" invisible="1"/>
                        <field name="approvals_blocked" invisible="1"/>
                        <group>
                            <group>
                                <field name="client_id"/>
                                <field name="opponent_id"/>
                                <field name="subject"/>
                                <field name="project_id"/>
                                <field name="case_id" readonly="1" context="{'default_pre_litigation_id': id}"/>
                            </group>
                            <group>
                                <field name="lawyer_employee_id"/>
                                <field name="office_manager_id"/>
                            </group>
                        </group>
                        <group>
                            <field name="description"/>
                        </group>
                        <notebook>
                            <page string="Workflow">
                                <group>
                                    <group>
                                        <field name="translation_notes"
                                               placeholder="Translation Notes..."
                                               modifiers="{'readonly': [('state', '!=', 'translation')], 'invisible': ['&amp;', ('state', '!=', 'translation'), ('translation_notes', '=', False)]}"/>
                                        <field name="memo_notes"
                                               placeholder="Drafting Notes..."
                                               modifiers="{'readonly': [('state', '!=', 'memo')], 'invisible': ['&amp;', ('state', '!=', 'memo'), ('memo_notes', '=', False)]}"/>
                                        <field name="review_notes"
                                               placeholder="Reviewer Notes..."
                                               modifiers="{'readonly': [('state', '!=', 'review')], 'invisible': ['&amp;', ('state', '!=', 'review'), ('review_notes', '=', False)]}"/>
                                        <field name="client_approval_notes"
                                               placeholder="Client Approval Notes..."
                                               modifiers="{'readonly': [('state', '!=', 'client_approval')], 'invisible': ['&amp;', ('state', '!=', 'client_approval'), ('client_approval_notes', '=', False)]}"/>
                                    </group>
                                    <group>
                                        <field name="office_sign_notes"
                                               placeholder="Office Signature Notes..."
                                               modifiers="{'readonly': [('state', '!=', 'office_sign')], 'invisible': ['&amp;', ('state', '!=', 'office_sign'), ('office_sign_notes', '=', False)]}"/>
                                        <field name="registration_details"
                                               placeholder="Registration Notes..."
                                               modifiers="{'readonly': [('state', '!=', 'registration')], 'invisible': ['&amp;', ('state', '!=', 'registration'), ('registration_details', '=', False)]}"/>
                                        <field name="correction_notes"
                                               placeholder="Correction Notes..."
                                               modifiers="{'readonly': [('state', '!=', 'correction')], 'invisible': ['&amp;', ('state', '!=', 'correction'), ('correction_notes', '=', False)]}"/>
                                        <field name="fee_payment_note"
                                               placeholder="Fee Payment Notes..."
                                               modifiers="{'readonly': [('state', '!=', 'fee_payment')], 'invisible': ['&amp;', ('state', '!=', 'fee_payment'), ('fee_payment_note', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>
                            <page string="Lawyer Notes">
                                <field name="lawyer_note"/>
                            </page>
                            <page string="Translation Subtasks">
                                <field name="translation_line_ids" context="{'default_pre_litigation_id': id}" nolabel="1">
                                    <list editable="bottom">
                                        <field name="name"/>
                                        <field name="responsible_id"/>
                                        <field name="deadline"/>
                                        <field name="state"/>
                                        <field name="request_attachment_ids"
                                               widget="many2many_kanban"
                                               context="{'default_res_model': 'qlk.pre.litigation.translation', 'default_res_id': id}"/>
                                        <field name="translated_attachment_ids"
                                               widget="many2many_kanban"
                                               context="{'default_res_model': 'qlk.pre.litigation.translation', 'default_res_id': id}"/>
                                        <field name="note"/>
                                    </list>
                                    <form string="Translation Subtask">
                                        <sheet>
                                            <group>
                                                <field name="name"/>
                                                <field name="responsible_id"/>
                                                <field name="deadline"/>
                                                <field name="state"/>
                                            </group>
                                            <group>
                                                <field name="request_attachment_ids"
                                                       widget="many2many_kanban"
                                                       context="{'default_res_model': 'qlk.pre.litigation.translation', 'default_res_id': id}"/>
                                                <field name="translated_attachment_ids"
                                                       widget="many2many_kanban"
                                                       context="{'default_res_model': 'qlk.pre.litigation.translation', 'default_res_id': id}"/>
                                            </group>
                                            <group>
                                                <field name="note"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Approvals">
                                <group>
                                    <group>
                                        <field name="approvals_submitted" readonly="1"/>
                                        <field name="approvals_completed" readonly="1"/>
                                    </group>
                                    <group>
                                        <field name="approvals_rejected" readonly="1"/>
                                    </group>
                                </group>
                                <field name="approval_line_ids" nolabel="1">
                                    <list create="0" edit="0">
                                        <field name="sequence"/>
                                        <field name="user_id"/>
                                        <field name="state" widget="badge"/>
                                        <field name="approval_date"/>
                                        <field name="note"/>
                                        <field name="can_approve" invisible="1"/>
                                        <button name="action_approve" string="Approve" type="object"
                                                class="btn-primary"
                                                modifiers="{'invisible': [('can_approve', '=', False)]}"/>
                                        <button name="action_reject" string="Reject" type="object"
                                                class="btn-secondary"
                                                modifiers="{'invisible': [('can_approve', '=', False)]}"/>
                                    </list>
                                    <form string="Approval">
                                        <sheet>
                                            <group>
                                                <field name="sequence"/>
                                                <field name="user_id"/>
                                                <field name="state"/>
                                                <field name="approval_date"/>
                                            </group>
                                            <group>
                                                <field name="note"/>
                                            </group>
                                        </sheet>
                                    </form>
                                </field>
                            </page>
                            <page string="Registration">
                                <group>
                                    <field name="registration_details"
                                           modifiers="{'readonly': [('state', '!=', 'registration')], 'invisible': ['&amp;', ('state', '!=', 'registration'), ('registration_details', '=', False)]}"/>
                                </group>
                            </page>
                            <page string="Fee Payment">
                                <group>
                                    <group>
                                        <field name="fee_payment_amount"/>
                                    </group>
                                    <group>
                                        <field name="fee_payment_reference"/>
                                        <field name="fee_payment_note"
                                               modifiers="{'readonly': [('state', '!=', 'fee_payment')], 'invisible': ['&amp;', ('state', '!=', 'fee_payment'), ('fee_payment_note', '=', False)]}"/>
                                    </group>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                <chatter>
                <field name="message_ids"
                    options="{'log': False}"/>
                </chatter>

                </form>
            </field>
        </record>

        <record id="action_pre_litigation" model="ir.actions.act_window">
            <field name="name">Pre-Litigation Cases</field>
            <field name="res_model">qlk.pre.litigation</field>
            <field name="view_mode">list,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Create the first pre-litigation workflow
                </p>
            </field>
        </record>

        <menuitem id="menu_pre_litigation_cases"
                  name="Pre-Litigation Cases"
                  parent="qlk_law.menu_qlk_case_root"
                  sequence="3"
                  action="action_pre_litigation"/>
    </data>
</odoo>
