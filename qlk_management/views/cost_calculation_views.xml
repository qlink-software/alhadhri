<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_cost_calculation_tree" model="ir.ui.view">
        <field name="name">cost.calculation.tree</field>
        <field name="model">cost.calculation</field>
        <field name="arch" type="xml">
            <list string="Lawyer Costs">
                <field name="name"/>
                <field name="employee_id"/>
                <field name="total"/>
                <field name="cost_per_hour"/>
            </list>
        </field>
    </record>

    <record id="view_cost_calculation_form" model="ir.ui.view">
        <field name="name">cost.calculation.form</field>
        <field name="model">cost.calculation</field>
        <field name="arch" type="xml">
            <form string="Lawyer Cost Calculation">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="employee_id"/>
                    </group>
                    <group string="Overhead">
                        <field name="mactech"/>
                        <field name="email_charge"/>
                        <field name="office_rent"/>
                        <field name="printer_rent"/>
                        <field name="telephone"/>
                        <field name="salary"/>
                    </group>
                    <group string="Summary">
                        <field name="total" readonly="1"/>
                        <field name="cost_per_hour" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_cost_calculation" model="ir.actions.act_window">
        <field name="name">Lawyer Cost Calculation</field>
        <field name="res_model">cost.calculation</field>
        <field name="view_mode">list,form</field>
        <field name="view_id" ref="view_cost_calculation_tree"/>
    </record>

    <menuitem id="menu_cost_calculation_root"
              name="Lawyer Costs"
              parent="account.menu_finance_configuration"
              action="action_cost_calculation"
              sequence="50"/>
</odoo>
