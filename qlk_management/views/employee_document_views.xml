<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_employee_document_list" model="ir.ui.view">
            <field name="name">qlk.employee.document.list</field>
            <field name="model">qlk.employee.document</field>
            <field name="arch" type="xml">
                <list string="Employee Documents">
                    <field name="name"/>
                    <field name="employee_id"/>
                    <field name="doc_type"/>
                    <field name="status"/>
                    <field name="date_start"/>
                    <field name="date_end"/>
                    <field name="requested_by"/>
                    <field name="approved_by"/>
                </list>
            </field>
        </record>

        <record id="view_employee_document_form" model="ir.ui.view">
            <field name="name">qlk.employee.document.form</field>
            <field name="model">qlk.employee.document</field>
            <field name="arch" type="xml">
                <form string="Employee Document">
                    <header>
                        <button name="action_submit_for_approval"
                                type="object"
                                string="Submit for Approval"
                                class="btn-primary"
                                modifiers="{'invisible':[('status','!=','draft')]}"/>
                        <button name="action_approve"
                                type="object"
                                string="Approve"
                                class="btn-primary"
                                groups="qlk_management.group_hr_nda_manager"
                                modifiers="{'invisible':[('status','!=','waiting_approval')]}"/>
                        <button name="action_reject"
                                type="object"
                                string="Reject"
                                groups="qlk_management.group_hr_nda_manager"
                                modifiers="{'invisible':[('status','!=','waiting_approval')]}"/>
                        <button name="action_mark_signed"
                                type="object"
                                string="Mark as Signed"
                                class="btn-secondary"
                                groups="qlk_management.group_hr_nda_manager"
                                modifiers="{'invisible':[('status','!=','approved')]}"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,waiting_approval,approved,rejected,signed"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="employee_id" modifiers="{'readonly':[('status','!=','draft')]}"/>
                                <field name="doc_type" modifiers="{'readonly':[('status','!=','draft')]}"/>
                                <field name="name" modifiers="{'readonly':[('status','!=','draft')]}"/>
                                <field name="template_ref" modifiers="{'readonly':[('status','!=','draft')]}"/>
                            </group>
                            <group>
                                <field name="date_start" modifiers="{'readonly':[('status','!=','draft')]}"/>
                                <field name="date_end" modifiers="{'readonly':[('status','!=','draft')]}"/>
                                <field name="requested_by" readonly="1"/>
                                <field name="approved_by" readonly="1"/>
                                <field name="approved_date" readonly="1"/>
                            </group>
                        </group>
                        <group string="Employee Details">
                            <group>
                                <field name="job_id" readonly="1"/>
                                <field name="department_id" readonly="1"/>
                            </group>
                            <group>
                                <field name="work_email" readonly="1"/>
                                <field name="work_phone" readonly="1"/>
                            </group>
                        </group>
                        <group string="Signed Documents">
                            <field name="signed_attachment_ids"
                                   widget="many2many_binary"
                                   string="Upload Signed Docs"
                                   context="{'default_res_model': 'qlk.employee.document', 'default_res_id': id}"
                                   modifiers="{'readonly':[('status','not in',['approved','signed'])]}"/>
                        </group>
                        <group string="Rejection Reason" modifiers="{'invisible':[('status','!=','rejected')]}">
                            <field name="rejection_reason" readonly="1"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="action_employee_documents" model="ir.actions.act_window">
            <field name="name">Employee Documents</field>
            <field name="res_model">qlk.employee.document</field>
            <field name="view_mode">list,form</field>
        </record>

        <menuitem id="menu_employee_documents"
                  name="Employee Documents"
                  parent="hr.menu_hr_employee"
                  action="action_employee_documents"
                  sequence="60"/>

        <record id="view_hr_employee_form_contracts_nda" model="ir.ui.view">
            <field name="name">hr.employee.form.contracts.nda</field>
            <field name="model">hr.employee</field>
            <field name="inherit_id" ref="hr.view_employee_form"/>
            <field name="arch" type="xml">
                <xpath expr="//sheet/div[@class='oe_button_box']" position="inside">
                    <button name="action_open_employee_documents"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-file-text-o">
                        <field name="employee_document_count" widget="statinfo" string="Documents"/>
                    </button>
                </xpath>
                <xpath expr="//sheet/notebook" position="inside">
                    <page string="Contracts &amp; NDA">
                        <field name="employee_document_ids" context="{'default_employee_id': id}">
                            <list editable="bottom">
                                <field name="doc_type"/>
                                <field name="name"/>
                                <field name="status"/>
                                <field name="date_start"/>
                                <field name="date_end"/>
                            </list>
                            <form>
                                <group>
                                    <field name="doc_type"/>
                                    <field name="name"/>
                                    <field name="status" readonly="1"/>
                                </group>
                            </form>
                        </field>
                    </page>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
