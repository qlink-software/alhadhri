<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sub_project_view_form" model="ir.ui.view">
        <field name="name">sub.project.view.form</field>
        <field name="model">sub.project</field>
        <field name="arch" type="xml">
            <form string="">
                <sheet>
                    <div>
                        <h1><field name="name" /></h1>
                    </div>
                    <group>
                        <group>
                            <field name="partner_id" />
                            <field name="main_project_id" />
                        </group>
                        <group>
                            <field name="start_date" />
                            <field name="end_date" />
                        </group>
                    </group>
                    <notebook> 
                        <page string="Description">
                            <field name="description"/>
                        </page>
                        <page string="Attachments">
                            <field name="attachment_ids" widget="many2many_binary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="sub_project_view_tree" model="ir.ui.view">
        <field name="name">sub.project.view.tree</field>
        <field name="model">sub.project</field>
        <field name="arch" type="xml">
            <list string="">
                <field name="start_date" />
                <field name="end_date" />
                <field name="partner_id" />
                <field name="main_project_id" />
                <field name="description" />
            </list>
        </field>
    </record>
    <record id="sub_project_action" model="ir.actions.act_window">
        <field name="name">Sub Project</field>
        <field name="res_model">sub.project</field>
        <field name="view_mode">list,form</field>
        <field name="domain">[]</field>
        <field name="context">{}</field>
    </record>


    <!-- <menuitem
        id="sub_project_menu"
        name="Sub Project"
        action="sub_project_action"
        parent="qlk_management.root_task_menu"
        sequence="3"/> -->

</odoo>
