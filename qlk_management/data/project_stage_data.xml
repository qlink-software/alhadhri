<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Pre-Litigation Pipeline -->
        <record id="qlk_case_stage_pre_intake" model="qlk.project.stage">
            <field name="name">Pre-Litigation Intake</field>
            <field name="sequence">5</field>
            <field name="stage_type">pre_litigation</field>
            <field name="technical_code">pre_intake</field>
            <field name="stage_code">PL</field>
            <field name="is_default" eval="True"/>
        </record>

        <record id="qlk_case_stage_pre_negotiation" model="qlk.project.stage">
            <field name="name">Negotiation &amp; Settlement</field>
            <field name="sequence">8</field>
            <field name="stage_type">pre_litigation</field>
            <field name="technical_code">pre_negotiation</field>
            <field name="stage_code">PN</field>
        </record>

        <!-- Litigation Pipeline -->
        <record id="qlk_project_stage_litigation_instance" model="qlk.project.stage">
            <field name="name">Court of First Instance</field>
            <field name="sequence">10</field>
            <field name="stage_type">litigation</field>
            <field name="technical_code">first_instance</field>
            <field name="stage_code">F</field>
            <field name="is_default" eval="True"/>
        </record>

        <record id="qlk_project_stage_litigation_appeal" model="qlk.project.stage">
            <field name="name">Appeal Stage</field>
            <field name="sequence">20</field>
            <field name="stage_type">litigation</field>
            <field name="technical_code">appeal</field>
            <field name="stage_code">A</field>
            <field name="stage_number">1</field>
        </record>

        <record id="qlk_project_stage_litigation_cassation" model="qlk.project.stage">
            <field name="name">Cassation Stage</field>
            <field name="sequence">30</field>
            <field name="stage_type">litigation</field>
            <field name="technical_code">cassation</field>
            <field name="stage_code">CA</field>
            <field name="stage_number">2</field>
        </record>

        <record id="qlk_project_stage_litigation_enforcement" model="qlk.project.stage">
            <field name="name">Enforcement Stage</field>
            <field name="sequence">40</field>
            <field name="stage_type">litigation</field>
            <field name="technical_code">enforcement</field>
            <field name="stage_code">E</field>
            <field name="stage_number">3</field>
        </record>

        <!-- Corporate Pipeline -->
        <record id="qlk_project_stage_corporate_intake" model="qlk.project.stage">
            <field name="name">Intake &amp; Planning</field>
            <field name="sequence">10</field>
            <field name="stage_type">corporate</field>
            <field name="technical_code">corp_intake</field>
            <field name="stage_code">IN</field>
            <field name="is_default" eval="True"/>
        </record>

        <record id="qlk_project_stage_corporate_execution" model="qlk.project.stage">
            <field name="name">Execution</field>
            <field name="sequence">20</field>
            <field name="stage_type">corporate</field>
            <field name="technical_code">corp_execution</field>
            <field name="stage_code">EX</field>
        </record>

        <record id="qlk_project_stage_corporate_review" model="qlk.project.stage">
            <field name="name">Quality Review</field>
            <field name="sequence">30</field>
            <field name="stage_type">corporate</field>
            <field name="technical_code">corp_review</field>
            <field name="stage_code">QR</field>
        </record>

        <record id="qlk_project_stage_corporate_delivery" model="qlk.project.stage">
            <field name="name">Delivery &amp; Sign-off</field>
            <field name="sequence">40</field>
            <field name="stage_type">corporate</field>
            <field name="technical_code">corp_delivery</field>
            <field name="stage_code">DL</field>
        </record>

        <!-- Arbitration Pipeline -->
        <record id="qlk_project_stage_arbitration_intake" model="qlk.project.stage">
            <field name="name">Arbitration Intake</field>
            <field name="sequence">10</field>
            <field name="stage_type">arbitration</field>
            <field name="technical_code">arb_intake</field>
            <field name="stage_code">AI</field>
            <field name="is_default" eval="True"/>
        </record>

        <record id="qlk_project_stage_arbitration_hearing" model="qlk.project.stage">
            <field name="name">Hearing Preparation</field>
            <field name="sequence">20</field>
            <field name="stage_type">arbitration</field>
            <field name="technical_code">arb_hearing</field>
            <field name="stage_code">HP</field>
        </record>

        <record id="qlk_project_stage_arbitration_award" model="qlk.project.stage">
            <field name="name">Award &amp; Enforcement</field>
            <field name="sequence">30</field>
            <field name="stage_type">arbitration</field>
            <field name="technical_code">arb_award</field>
            <field name="stage_code">AW</field>
        </record>

    </data>
</odoo>
